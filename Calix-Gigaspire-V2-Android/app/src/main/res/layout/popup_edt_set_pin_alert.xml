<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LayoutWidMatch_HeiWrap"
    android:layout_margin="@dimen/size15"
    android:elevation="@dimen/size2"
    app:cardCornerRadius="@dimen/size3"
    tools:targetApi="lollipop">

    <LinearLayout
        style="@style/LayoutWidMatch_HeiWrap"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            style="@style/TextRobotoMedium"
            android:layout_marginTop="@dimen/size10"
            android:text="@string/set_pin"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/text14" />


        <EditText
            android:id="@+id/new_pin_edt"
            style="@style/EditTextRobotoRegular"
            android:layout_margin="@dimen/size10"
            android:ellipsize="end"
            android:hint="@string/enter_your_new_pin"
            android:imeOptions="actionNext|flagNoExtractUi"
            android:inputType="number"
            android:singleLine="true" />


        <EditText
            android:id="@+id/cnf_pin_edt"
            style="@style/EditTextRobotoRegular"
            android:layout_margin="@dimen/size10"
            android:ellipsize="end"
            android:hint="@string/enter_your_cnf_pin"
            android:imeOptions="actionDone|flagNoExtractUi"
            android:inputType="number"
            android:singleLine="true" />


        <LinearLayout style="@style/LayoutWidMatch_HeiWrap">

            <Button
                android:id="@+id/negative_btn"
                style="@style/ButtonRobotoMedium"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:elevation="0dip"
                android:text="@string/cancel"
                android:textColor="@color/black"
                tools:targetApi="lollipop"
                android:background="@color/gray_light"
                android:layout_margin="@dimen/size12"
                />

            <Button
                android:id="@+id/positive_btn"
                style="@style/ButtonRobotoMedium"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_margin="@dimen/size12"
                android:elevation="0dip"
                android:text="@string/done"
                android:textColor="@color/white"
                tools:targetApi="lollipop" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
