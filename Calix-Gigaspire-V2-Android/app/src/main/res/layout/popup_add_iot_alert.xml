<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LayoutWidMatch_HeiWrap"
    android:layout_margin="@dimen/size15"
    android:elevation="@dimen/size2"
    app:cardCornerRadius="@dimen/size3"
    tools:targetApi="lollipop">

    <LinearLayout
        style="@style/LayoutWidMatch_HeiWrap"
        android:layout_marginTop="@dimen/size5"

        android:orientation="vertical"
        android:padding="@dimen/size10">

        <LinearLayout
            style="@style/LayoutWidMatch_HeiWrap"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="@dimen/size40"
                android:layout_height="@dimen/size40"
                android:adjustViewBounds="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/wifi" />


            <TextView
                android:id="@+id/alert_device_name_txt"
                style="@style/TextRobotoMedium"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/size10"
                android:gravity="start"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="@string/add_a_device"
                android:textSize="@dimen/text13" />

        </LinearLayout>


        <TextView
            style="@style/TextRobotoRegular"
            android:layout_marginBottom="@dimen/size10"
            android:layout_marginTop="@dimen/size5"
            android:gravity="start"
            android:paddingEnd="@dimen/size20"
            android:paddingStart="@dimen/size20"
            android:text="@string/put_the_device_pairing"
            android:textSize="@dimen/text12" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size35"
            android:layout_marginBottom="@dimen/size10"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/size20"
            android:paddingStart="@dimen/size20"
            android:weightSum="2">

            <Button
                android:id="@+id/alert_negative_btn"
                style="@style/ButtonRobotoMedium"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/size10"
                android:layout_weight="1"
                android:background="@drawable/gray_btn"
                android:text="@string/cancel"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/text13" />

            <Button
                android:id="@+id/alert_positive_btn"
                style="@style/ButtonRobotoMedium"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/size10"
                android:layout_weight="1"
                android:text="@string/cont"
                android:textAllCaps="false"
                android:textSize="@dimen/text13" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>


