<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LayoutWidMatch_HeiWrap"
    android:layout_margin="@dimen/size15"
    android:elevation="@dimen/size2"
    app:cardCornerRadius="@dimen/size3"
    tools:targetApi="lollipop">

    <LinearLayout
        style="@style/LayoutWidMatch_HeiWrap"
        android:orientation="vertical">

        <TextView
            style="@style/TextRobotoMedium"
            android:background="@color/blue"
            android:paddingBottom="@dimen/size10"
            android:paddingTop="@dimen/size10"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/text16" />

        <RelativeLayout
            style="@style/LayoutWidMatch_HeiWrap"
            android:layout_marginTop="@dimen/size5"
            android:padding="@dimen/size8">

            <LinearLayout
                android:id="@+id/setup_guest_start_time"
                style="@style/LayoutWrap"
                android:layout_alignParentStart="true"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/size10">

                <TextView
                    android:id="@+id/start_time_txt"
                    style="@style/TextRobotoRegular"
                    android:layout_width="@dimen/size80"
                    android:layout_gravity="center"
                    android:background="@drawable/blue_bg"
                    android:gravity="center"
                    android:padding="@dimen/size7"
                    android:text="@string/seven_thirty"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text11" />

                <TextView
                    style="@style/TextRobotoMedium"
                    android:gravity="center"
                    android:paddingTop="@dimen/size3"
                    android:text="@string/start"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text10" />
            </LinearLayout>

            <TextView
                style="@style/TextRobotoRegular"
                android:layout_width="wrap_content"
                android:layout_toEndOf="@+id/setup_guest_start_time"
                android:layout_toStartOf="@+id/setup_guest_end_time"
                android:text="@string/to"
                android:layout_marginTop="@dimen/size6"
                android:textColor="@color/gray"
                android:textSize="@dimen/size13" />

            <LinearLayout
                android:id="@+id/setup_guest_end_time"
                style="@style/LayoutWrap"
                android:layout_alignParentEnd="true"
                android:orientation="vertical"
                android:layout_marginEnd="@dimen/size10">

                <TextView
                    android:id="@+id/end_time_txt"
                    style="@style/TextRobotoRegular"
                    android:layout_width="@dimen/size80"
                    android:background="@drawable/blue_bg"
                    android:padding="@dimen/size7"
                    android:text="@string/nine_thirty"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/text11" />

                <TextView
                    style="@style/TextRobotoMedium"
                    android:gravity="center"
                    android:paddingTop="@dimen/size3"
                    android:text="@string/end"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text10" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size35"
            android:layout_margin="@dimen/size10"
            android:layout_marginBottom="@dimen/size14"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/size25"
            android:paddingStart="@dimen/size25"
            android:weightSum="2">

            <Button
                android:id="@+id/alert_negativee_btn"
                style="@style/ButtonRobotoMedium"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/size10"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:visibility="visible" />

            <Button
                android:id="@+id/alert_positivee_btn"
                style="@style/ButtonRobotoMedium"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/size10"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:textSize="@dimen/text14" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>


