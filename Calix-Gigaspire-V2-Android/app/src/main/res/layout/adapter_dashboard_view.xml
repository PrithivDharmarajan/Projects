<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LayoutWrap"
    android:layout_centerInParent="true">

    <com.calix.calixgigaspireapp.utils.CircularLayout
        android:id="@+id/circular_lay"
        style="@style/LayoutMatch" />

    <RelativeLayout
        style="@style/LayoutWrap"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/device_hexagonal_img"
            android:layout_width="@dimen/size50"
            android:layout_height="@dimen/size50"
            android:layout_centerInParent="true"
            android:contentDescription="@string/app_name"
            android:tint="@color/gray_light"
            android:src="@drawable/hexagonal_sky_blue" />

        <TextView
            android:id="@+id/device_count_txt"
            style="@style/TextRobotoRegular"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/size30"
            android:adjustViewBounds="true"
            android:background="@drawable/badge_background"
            android:gravity="center"
            android:padding="@dimen/size2"
            android:text="@string/default_count"
            android:textColor="@color/white"
            android:textSize="@dimen/text8" />

        <ImageView
            android:layout_width="@dimen/size30"
            android:layout_height="@dimen/size30"
            android:layout_centerInParent="true"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/size5"
            android:src="@drawable/center_device" />

        <TextView
            style="@style/TextRobotoRegular"
            android:layout_width="wrap_content"
            android:layout_below="@id/device_hexagonal_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/size5"
            android:text="@string/devices"
            android:textColor="@color/black"
            android:textSize="@dimen/text8" />
    </RelativeLayout>


</RelativeLayout>
