<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wifi_speed_result_parent_lay"
    style="@style/LayoutWidMatch_HeiWrap">

    <android.support.v7.widget.CardView
        android:id="@+id/custom_card_view"
        style="@style/LayoutWidMatch_HeiWrap"
        android:layout_marginBottom="@dimen/size3"
        android:layout_marginTop="@dimen/size3"
        app:cardCornerRadius="@dimen/size2">

        <LinearLayout
            style="@style/LayoutWidMatch_HeiWrap"
            android:layout_height="@dimen/size55"
            android:background="@color/sky_light_blue">

            <LinearLayout
                style="@style/LayoutWidWei_HeiWrap"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/size1"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/router_circle_img"
                    android:layout_width="@dimen/size30"
                    android:layout_height="@dimen/size30"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/router_icon" />

                <TextView
                    android:id="@+id/router_txt"
                    style="@style/TextRobotoMedium"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text9" />
            </LinearLayout>

            <View
                android:layout_width="@dimen/size0.5"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/size5"
                android:layout_marginTop="@dimen/size5"
                android:background="@color/white" />


            <TextView
                android:id="@+id/download_txt"
                style="@style/TextRobotoRegular"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="1"
                android:text="00.00"
                android:textColor="@color/black"
                android:textSize="@dimen/text9" />

            <View
                android:layout_width="@dimen/size0.5"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/size5"
                android:layout_marginTop="@dimen/size5"
                android:background="@color/white" />


            <TextView
                android:id="@+id/upload_txt"
                style="@style/TextRobotoRegular"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="1"
                android:text="00.00"
                android:textColor="@color/black"
                android:textSize="@dimen/text9" />

            <View
                android:layout_width="@dimen/size0.5"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/size5"
                android:layout_marginTop="@dimen/size5"
                android:background="@color/white" />

            <TextView
                android:id="@+id/ping_txt"
                style="@style/TextRobotoRegular"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="1"
                android:text="00.00"
                android:textColor="@color/black"
                android:textSize="@dimen/text9" />


        </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>