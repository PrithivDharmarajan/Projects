                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="@dimen/size30"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/set_pin" />

