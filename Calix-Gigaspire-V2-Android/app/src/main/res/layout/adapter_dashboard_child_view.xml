<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LayoutWrap"
    android:layout_centerInParent="true">

    <ImageView
        android:id="@+id/device_child_hexagonal_img"
        android:layout_width="@dimen/size50"
        android:layout_height="@dimen/size50"
        android:layout_centerInParent="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/hexagonal_sky_blue"
        android:tint="@color/gray_light" />

    <TextView
        android:id="@+id/device_count_txt"
        style="@style/TextRobotoRegular"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="@dimen/size30"
        android:adjustViewBounds="true"
        android:background="@drawable/badge_background"
        android:gravity="center"
        android:padding="@dimen/size2"
        android:text="@string/default_count"
        android:textColor="@color/white"
        android:textSize="@dimen/text8" />

    <ImageView
        android:id="@+id/device_child_img"
        android:layout_width="@dimen/size30"
        android:layout_height="@dimen/size30"
        android:layout_centerInParent="true"
        android:contentDescription="@string/app_name"
        android:padding="@dimen/size5" />

    <TextView
        android:id="@+id/device_child_name_txt"
        android:layout_width="wrap_content"
        style="@style/TextRobotoRegular"
        android:layout_marginTop="@dimen/size5"
        android:layout_below="@id/device_child_hexagonal_img"
        android:layout_centerHorizontal="true"
        android:text="@string/devices"
        android:textColor="@color/black"
        android:textSize="@dimen/text8" />
</RelativeLayout>
