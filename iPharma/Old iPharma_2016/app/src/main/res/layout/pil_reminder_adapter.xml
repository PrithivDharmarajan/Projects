<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/margin10">

    <LinearLayout
        android:id="@+id/button_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/edit_btn"
            android:layout_width="@dimen/margin40"
            android:layout_height="@dimen/margin40"
            android:text="@string/edit"
            android:textColor="@color/black_color"
            android:textSize="@dimen/text15"/>

        <Button
            android:id="@+id/delete_btn"
            android:layout_width="@dimen/margin40"
            android:layout_height="@dimen/margin40"
            android:layout_marginTop="@dimen/margin10"
            android:text="@string/delete"
            android:textColor="@color/black_color"
            android:textSize="@dimen/text15"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/button_lay"
        android:layout_toStartOf="@+id/button_lay"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tablet_name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin5"
            android:text="gkmhjfdln mmvnbfldmvm i; o odfhjbn;loiuajli"
            android:textColor="@color/black_color"
            android:textSize="@dimen/text15"/>

        <TextView
            android:id="@+id/tablet_date_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin5"
            android:text="gkmhjfdln mmvnbfldmvm i; o odfhjbn;loiuajli"
            android:textColor="@color/black_color"
            android:textSize="@dimen/text12"/>

        <TextView
            android:id="@+id/tablet_time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin5"
            android:text="gkmhjfdln mmvnbfldmvm i; o odfhjbn;loiuajli"
            android:textColor="@color/black_color"
            android:textSize="@dimen/text12"/>

    </LinearLayout>
</RelativeLayout>