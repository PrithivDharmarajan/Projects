<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/map_detail_popup"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin5" >

        <ImageView
            android:id="@+id/shopLogo"
            android:layout_width="@dimen/margin35"
            android:layout_height="@dimen/margin35"
            android:layout_gravity="left|center_vertical"
            android:adjustViewBounds="true"
            android:background="@drawable/ipharma_message_icon"
            android:contentDescription="@drawable/ipharma_message_icon"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/padding7" >

            <TextView
                android:id="@+id/pharmacy_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLength="40"
                android:singleLine="true"
                android:textColor="@color/black_color"
                android:textSize="@dimen/text16" />

            <TextView
                android:id="@+id/pharmacy_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pharmacy_name"
                android:ellipsize="end"
                android:maxLength="30"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/black_color"
                android:textSize="@dimen/text10" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/shopright_arrow"
            android:layout_width="@dimen/margin30"
            android:layout_height="@dimen/margin30"
            android:layout_gravity="right|center_vertical"
            android:contentDescription="@drawable/ipharma_message_icon"
            android:src="@drawable/ipharama_right_arrow" />
    </LinearLayout>

</RelativeLayout>