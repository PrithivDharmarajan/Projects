    </style>



    <style name="Theme.AppCompat.Translucent">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>



    <style name="AppTheme.Widget.EditText" parent="android:Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size50</item>
        <item name="android:textColorHint">@color/app_color</item>
        <item name="android:textColor">@color/app_color</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textSize">@dimen/text10</item>
        <item name="android:paddingLeft">@dimen/size20</item>
        <item name="android:paddingRight">@dimen/size20</item>
        <!--<item name="android:background">@drawable/edittext_background</item>-->
        <item name="android:singleLine">true</item>
        <item name="fontPath">fonts/OpenSans-Regular.otf</item>
    </style>

    <style name="StarRating">
        <item name="android:progressDrawable">@drawable/custom_bar</item>
        <item name="android:minHeight">20sp</item>
        <item name="android:maxHeight">20sp</item>
        <item name="android:minWidth">@dimen/size2</item>
        <item name="android:maxWidth">@dimen/size2</item>
        <item name="android:numStars">5</item>
    </style>

    <style name="StarRating_big">
        <item name="android:progressDrawable">@drawable/custom_bar_big</item>
        <item name="android:minHeight">28sp</item>
        <item name="android:maxHeight">28sp</item>
        <item name="android:minWidth">@dimen/size3</item>
        <item name="android:maxWidth">@dimen/size3</item>
        <item name="android:numStars">5</item>
    </style>
    <style name="StarRating_small">
        <item name="android:progressDrawable">@drawable/custom_bar_small</item>
        <item name="android:minHeight">16sp</item>
        <item name="android:maxHeight">16sp</item>
        <item name="android:minWidth">@dimen/size3</item>
        <item name="android:maxWidth">@dimen/size3</item>
        <item name="android:numStars">5</item>
    </style>



</resources>
