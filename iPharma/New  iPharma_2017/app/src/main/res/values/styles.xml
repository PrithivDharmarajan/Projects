    <style name="EditBold" parent="android:Widget.EditText">
        <item name="android:textColor">@color/whitecolor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/size3</item>
        <item name="android:background">@null</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:textCursorDrawable">@drawable/white_cursor</item>
        <item name="android:textColorHint">@color/greycolor</item>
        <item name="fontPath">fonts/Ubuntu-B.ttf</item>
    </style>

    <style name="EditLight" parent="android:Widget.EditText">
        <item name="android:textColor">@color/blackcolor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/size3</item>
        <item name="android:background">@null</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:textColorHint">@color/blackcolor</item>
        <item name="android:textCursorDrawable">@drawable/white_cursor</item>
        <item name="fontPath">fonts/Ubuntu-L.ttf</item>
    </style>

    <style name="EditRegular" parent="android:Widget.EditText">
        <item name="android:textColor">@color/whitecolor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textNoSuggestions</item>
