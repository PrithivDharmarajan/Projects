    </style>



    <style name="ButtonBold" parent="android:Widget.Button">
        <item name="android:textColor">@color/app_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/size2</item>
        <item name="android:paddingRight">@dimen/size2</item>
        <item name="android:paddingTop">@dimen/size2</item>
        <item name="android:paddingBottom">@dimen/size2</item>
        <item name="fontPath">fonts/Ubuntu-B.ttf</item>
    </style>
    <style name="ButtonLight" parent="android:Widget.Button">
        <item name="android:textColor">@color/app_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/size3</item>
        <item name="fontPath">fonts/Ubuntu-L.ttf</item>
