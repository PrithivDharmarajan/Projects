<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/status_bar</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Widget.TextView" parent="android:Widget.TextView">

    </style>


    <style name="TextBold" parent="AppTheme.Widget.TextView">
        <item name="android:textColor">@color/whitecolor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/size3</item>
        <item name="fontPath">fonts/Ubuntu-B.ttf</item>
    </style>

    <style name="TextLight" parent="AppTheme.Widget.TextView">
        <item name="android:textColor">@color/whitecolor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/size3</item>
        <item name="fontPath">fonts/Ubuntu-L.ttf</item>
    </style>

    <style name="TextLight2" parent="AppTheme.Widget.TextView">
        <item name="android:textColor">@color/whitecolor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontPath">fonts/Ubuntu-L.ttf</item>
    </style>

