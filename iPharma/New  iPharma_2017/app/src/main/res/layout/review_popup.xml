<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/size20"
    android:layout_marginBottom="@dimen/size20"
    android:background="@drawable/popup_window">
    <ImageView
        android:layout_width="@dimen/size80"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size10"
        android:visibility="visible"
        android:adjustViewBounds="true"
        android:src="@drawable/popup_logo"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/size18"
        style="@style/TextMedium"
        android:layout_marginTop="@dimen/size10"
        android:textColor="@color/blackcolor"
        android:text="@string/wr_review"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/rating_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/size20"
            android:layout_marginRight="@dimen/size20"
            android:layout_marginTop="@dimen/size10">
            <Button
                android:id="@+id/rating_icons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/excellent" />
            <TextView
                android:id="@+id/rating_avg_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/size10"
                android:text="@string/excellent"
                android:textColor="@color/list_color"
                style="@style/TextRegular"
                android:textSize="@dimen/text20"
                android:textStyle="bold" />
            <RatingBar
                android:id="@+id/fav_ratingbar"
                style="@style/StarRating_big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="false"
                android:layout_gravity="center"
                android:stepSize="1"
                android:layout_margin="@dimen/size10"
                android:visibility="visible"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rating_layout"
            android:layout_above="@+id/button_layout"
            android:background="@color/greycolor"
            android:layout_marginLeft="@dimen/size20"
            android:layout_marginRight="@dimen/size20"
            android:layout_marginTop="@dimen/size10">

            <EditText
                android:id="@+id/review_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/whitecolor"
                android:hint="@string/ty_here"
                android:gravity="top|left"
                android:padding="@dimen/size10"
                android:textSize="@dimen/size16"
                android:layout_margin="1dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center">
            <ImageView
                android:id="@+id/yes_btn"
                android:layout_width="@dimen/size40"
                android:layout_height="@dimen/size40"
                android:layout_margin="@dimen/size10"
                android:src="@drawable/ok_btn"/>
            <ImageView
                android:id="@+id/close_button"
                android:layout_width="@dimen/size40"
                android:layout_height="@dimen/size40"
                android:layout_margin="@dimen/size10"
                android:src="@drawable/cancel_btn"/>
        </LinearLayout>

    </RelativeLayout>

    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <ImageView
            android:id="@+id/yes_btn"
            android:layout_width="@dimen/size40"
            android:layout_height="@dimen/size40"
            android:layout_margin="@dimen/size10"
            android:src="@drawable/ok_btn"/>
        <ImageView
            android:id="@+id/close_button"
            android:layout_width="@dimen/size40"
            android:layout_height="@dimen/size40"
            android:layout_margin="@dimen/size10"
            android:src="@drawable/cancel_btn"/>
    </LinearLayout>-->

</LinearLayout>
</RelativeLayout>