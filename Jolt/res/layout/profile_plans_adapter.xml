<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/plan_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:paddingLeft="@dimen/margin15"
            android:text="@string/plan"
            android:textColor="@color/gray_2"
            android:textSize="@dimen/text14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/planDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:paddingLeft="@dimen/margin10"
            android:textColor="@color/gray_2"
            android:textSize="@dimen/text14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/expiration_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:paddingLeft="@dimen/margin15"
            android:text="@string/expiration"
            android:textColor="@color/gray_2"
            android:textSize="@dimen/text14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/expirationDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:paddingLeft="@dimen/margin10"
            android:textColor="@color/gray_2"
            android:textSize="@dimen/text14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/drinks_count_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:paddingLeft="@dimen/margin15"
            android:text="@string/drinks_count"
            android:textColor="@color/gray_2"
            android:textSize="@dimen/text14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/drinks_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin10"
            android:textColor="@color/gray_2"
            android:textSize="@dimen/text14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/include_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:paddingLeft="@dimen/margin15"
            android:text="@string/include_txt"
            android:textColor="@color/gray_2"
            android:textSize="@dimen/text14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/include"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin10"
            android:textColor="@color/gray_2"
            android:textSize="@dimen/text14" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/margin5"
        android:background="@color/green" />

</LinearLayout>