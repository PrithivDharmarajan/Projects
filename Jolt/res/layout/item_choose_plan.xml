<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/choose_lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin15"
        android:layout_marginLeft="@dimen/margin15"
        android:layout_marginRight="@dimen/margin5"
        android:background="@drawable/choose_plan_mask" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin35"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/cup_image"
                android:layout_width="@dimen/height120"
                android:layout_height="@dimen/margin90"
                android:background="@drawable/choose_jolt"
                android:contentDescription="@drawable/jolt_app_icon" />

            <TextView
                android:id="@+id/drinksCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin3"
                android:textColor="@color/white"
                android:textSize="@dimen/text24"
                android:textStyle="bold" />

            <View
                android:id="@+id/view1"
                android:layout_width="@dimen/height200"
                android:layout_height="@dimen/padding2"
                android:background="@color/white" />

            <TextView
                android:id="@+id/planCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text24"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/costPerCup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text15" />

            <TextView
                android:id="@+id/taxIncluded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tax_included"
                android:textColor="@color/white"
                android:textSize="@dimen/text15" />

            <TextView
                android:id="@+id/expiration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text15" />
        </LinearLayout>

        <TextView
            android:id="@+id/choose"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin50"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/choose"
            android:textColor="@color/jolt_green"
            android:textSize="@dimen/text28"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>