<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sign_in_aft_lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/why_dont_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/check_inbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin45"
        android:gravity="center"
        android:text="@string/check_inbox"
        android:textColor="@color/white"
        android:textSize="@dimen/text24" />

    <TextView
        android:id="@+id/sent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/sent_to_email"
        android:textColor="@color/white"
        android:textSize="@dimen/text16" />

    <TextView
        android:id="@+id/sent_mail_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text16" />

    <TextView
        android:id="@+id/open_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin40"
        android:gravity="center"
        android:text="@string/please_open_message"
        android:textColor="@color/white"
        android:textSize="@dimen/text20" />

    <LinearLayout
        android:id="@+id/try_again_lay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin40"
        android:gravity="center"
        android:clickable="true"
        android:layout_marginTop="@dimen/padding2"
        android:paddingBottom="@dimen/margin10"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/did_nt_get"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/did_nt_get"
            android:textColor="@color/white"
            android:textSize="@dimen/text16" />

        <TextView
            android:id="@+id/try_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin5"
            android:text="@string/try_again"
            android:textColor="@color/white"
            android:textSize="@dimen/text16" />
    </LinearLayout>

</LinearLayout>