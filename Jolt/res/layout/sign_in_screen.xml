<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_login_lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/margin10"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/jolt_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/jolt_txt"
            android:textColor="@color/jolt_green"
            android:textSize="@dimen/text70" />

        <TextView
            android:id="@+id/top_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin7"
            android:gravity="center"
            android:text="@string/sign_in_now_top_txt"
            android:textColor="@color/white"
            android:textSize="@dimen/text20"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sign_later"
        android:layout_marginBottom="@dimen/margin25"
        android:gravity="center|bottom"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/facebook_lay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin50"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin35"
            android:layout_marginRight="@dimen/margin35"
            android:background="@drawable/facebook_btn"
            android:clickable="true"
            android:onClick="onClick"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/facebook_img"
                android:layout_width="@dimen/margin30"
                android:layout_height="@dimen/margin30"
                android:layout_gravity="center|left"
                android:layout_marginLeft="@dimen/margin10"
                android:background="@drawable/fb_icon"
                android:contentDescription="@drawable/jolt_app_icon"
                android:padding="@dimen/padding5" />

            <View
                android:id="@+id/facebook_view"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin5"
                android:background="@color/view_deep_blue"
                android:contentDescription="@drawable/jolt_app_icon"
                android:gravity="center" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center|right" >

                <TextView
                    android:id="@+id/facebook_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/sign_in_with_facebook_txt"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text16" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/google_lay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin50"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin35"
            android:layout_marginRight="@dimen/margin35"
            android:layout_marginTop="@dimen/margin10"
            android:background="@drawable/google_plus"
            android:clickable="true"
            android:onClick="onClick"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/google_img"
                android:layout_width="@dimen/margin30"
                android:layout_height="@dimen/margin30"
                android:layout_gravity="center|left"
                android:layout_marginLeft="@dimen/margin10"
                android:background="@drawable/google_icon"
                android:contentDescription="@drawable/jolt_app_icon"
                android:padding="@dimen/padding5" />

            <View
                android:id="@+id/google_view"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin5"
                android:background="@color/view_red"
                android:contentDescription="@drawable/jolt_app_icon"
                android:gravity="center" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center|right" >

                <TextView
                    android:id="@+id/google_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/sign_in_using_google_txt"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text16" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/email_lay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin50"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin35"
            android:layout_marginRight="@dimen/margin35"
            android:layout_marginTop="@dimen/margin10"
            android:background="@drawable/green_btn"
            android:clickable="true"
            android:onClick="onClick"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/email_img"
                android:layout_width="@dimen/margin30"
                android:layout_height="@dimen/margin30"
                android:layout_gravity="center|left"
                android:layout_marginLeft="@dimen/padding6"
                android:background="@drawable/mail_icon"
                android:contentDescription="@drawable/jolt_app_icon"
                android:padding="@dimen/padding5" />

            <View
                android:id="@+id/email_view"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/padding9"
                android:background="@color/view_green"
                android:contentDescription="@drawable/jolt_app_icon"
                android:gravity="center" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center|right" >

                <TextView
                    android:id="@+id/email_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/sign_in_with_email_txt"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text16" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin35"
            android:layout_marginRight="@dimen/margin35"
            android:layout_marginTop="@dimen/margin10"
            android:gravity="center"
            android:text="@string/we_will_never_txt"
            android:textColor="@color/white"
            android:textSize="@dimen/text12" />
    </LinearLayout>

    <TextView
        android:id="@+id/sign_later"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin50"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin5"
        android:clickable="true"
        android:gravity="center"
        android:onClick="onClick"
        android:text="@string/will_sign_in_later_txt"
        android:textColor="@color/white"
        android:textSize="@dimen/text16" />

</RelativeLayout>