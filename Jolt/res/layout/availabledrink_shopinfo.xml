<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <LinearLayout
        android:id="@+id/parent_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/name_address_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:id="@+id/shop_name_street"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin15"
                android:layout_marginTop="@dimen/margin10" >

                <TextView
                    android:id="@+id/shop_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin60"
                    android:singleLine="true"
                    android:textColor="@color/gray_2"
                    android:textSize="@dimen/text15" />

                <TextView
                    android:id="@+id/shop_street"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/shop_name"
                    android:layout_marginRight="@dimen/margin60"
                    android:singleLine="true"
                    android:textColor="@color/gray_2"
                    android:textSize="@dimen/text13" />
            </RelativeLayout>

           <com.smaat.jolt.util.ImageViewRounded
                android:id="@+id/shope_logo"
                android:layout_width="@dimen/margin40"
                android:layout_height="@dimen/margin40"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin10"
                android:layout_marginTop="@dimen/margin10"
                android:background="@drawable/converstation_jolt_icon"
                android:contentDescription="@drawable/converstation_jolt_icon"
                android:gravity="center"
                android:scaleType="fitXY" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/margin5"
            android:background="@color/gray_2" />

        <RelativeLayout
            android:id="@+id/nameshopAdress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin15"
            android:layout_marginTop="@dimen/margin5" >

            <TextView
                android:id="@+id/Shop_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin60"
                android:singleLine="true"
                android:textColor="@color/gray_2"
                android:textSize="@dimen/text15" />

            <TextView
                android:id="@+id/subway"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Shop_city"
                android:singleLine="true"
                android:text="@string/subway_txt"
                android:textColor="@color/gray_2"
                android:textSize="@dimen/text13" />

            <TextView
                android:id="@+id/Shop_subway"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Shop_city"
                android:layout_marginLeft="@dimen/margin5"
                android:layout_toRightOf="@+id/subway"
                android:singleLine="true"
                android:textColor="@color/gray_2"
                android:textSize="@dimen/text13" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/margin5"
            android:background="@color/gray_2" />

        <LinearLayout
            android:id="@+id/shop_day_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin5"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/closed_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin15"
                android:layout_marginRight="@dimen/margin10" >

                <TextView
                    android:id="@+id/closed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:textColor="@color/closed_red"
                    android:textSize="@dimen/text15"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/closed_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin10"
                    android:textColor="@color/gray_2"
                    android:textSize="@dimen/text15"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/open_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin15"
                android:layout_marginRight="@dimen/margin10"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/margin5"
            android:background="@color/gray_2" />

        <LinearLayout
            android:id="@+id/beans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin15"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:text="@string/beans"
                android:textColor="@color/gray_2"
                android:textSize="@dimen/text15"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/beans_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:textColor="@color/gray_2"
                android:textSize="@dimen/text14" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_2" />

        <LinearLayout
            android:id="@+id/Phonemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin15"
            android:layout_marginRight="@dimen/margin10"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="2" >

            <RelativeLayout
                android:id="@+id/shop_Ph_lay"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:paddingBottom="@dimen/margin15"
                android:paddingTop="@dimen/margin15" >

                <Button
                    android:id="@+id/shop_ph_btn"
                    android:layout_width="@dimen/margin15"
                    android:layout_height="@dimen/margin15"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shop_details_phone" />

                <TextView
                    android:id="@+id/shop_ph_num"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin7"
                    android:layout_toRightOf="@+id/shop_ph_btn"
                    android:textColor="@color/gray_2"
                    android:textSize="@dimen/text14" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/shop_mail_lay"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin5"
                android:layout_weight="1"
                android:clickable="true"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/margin15"
                android:paddingTop="@dimen/margin15" >

                <Button
                    android:id="@+id/shop_mail_btn"
                    android:layout_width="@dimen/margin25"
                    android:layout_height="@dimen/margin13"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shop_details_website"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/shop_mail"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin7"
                    android:layout_toRightOf="@+id/shop_mail_btn"
                    android:textColor="@color/gray_2"
                    android:textSize="@dimen/text14" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_2" />

        <LinearLayout
            android:id="@+id/contact_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin15"
            android:orientation="horizontal"
            android:weightSum="5" >

            <TextView
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/share"
                android:textColor="@color/gray_2"
                android:textSize="@dimen/text15"
                android:textStyle="bold" />

            <Button
                android:id="@+id/fb_share_btn"
                android:layout_width="@dimen/margin45"
                android:layout_height="@dimen/margin50"
                android:layout_marginLeft="@dimen/margin10"
                android:layout_weight="1"
                android:background="@drawable/facebook_icon" />

            <Button
                android:id="@+id/twitter_share_btn"
                android:layout_width="@dimen/margin45"
                android:layout_height="@dimen/margin50"
                android:layout_marginLeft="@dimen/margin5"
                android:layout_weight="1"
                android:background="@drawable/twitter_icon" />

            <Button
                android:id="@+id/whatsapp_share_btn"
                android:layout_width="@dimen/margin50"
                android:layout_height="@dimen/margin55"
                android:layout_marginLeft="@dimen/margin5"
                android:layout_weight="1"
                android:background="@drawable/whatsapp_icon" />

            <Button
                android:id="@+id/email_share_btn"
                android:layout_width="@dimen/margin50"
                android:layout_height="@dimen/margin55"
                android:layout_marginLeft="@dimen/margin5"
                android:layout_weight="1"
                android:background="@drawable/email_icon" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_2" />

        <RelativeLayout
            android:id="@+id/facilities_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin10"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/dogs_btn"
                android:layout_width="@dimen/margin60"
                android:layout_height="@dimen/margin60"
                android:background="@drawable/dog_icon" />

            <Button
                android:id="@+id/wifi_btn"
                android:layout_width="@dimen/margin60"
                android:layout_height="@dimen/margin60"
                android:layout_marginLeft="@dimen/margin10"
                android:layout_toRightOf="@+id/dogs_btn"
                android:background="@drawable/wifi_icon" />

            <Button
                android:id="@+id/gluten_btn"
                android:layout_width="@dimen/margin60"
                android:layout_height="@dimen/margin60"
                android:layout_marginLeft="@dimen/margin10"
                android:layout_toRightOf="@+id/wifi_btn"
                android:background="@drawable/drinksicon_one" />

            <Button
                android:id="@+id/restaurant_btn"
                android:layout_width="@dimen/margin60"
                android:layout_height="@dimen/margin60"
                android:layout_marginLeft="@dimen/margin10"
                android:layout_toRightOf="@+id/gluten_btn"
                android:background="@drawable/drinksicon_two" />
        </RelativeLayout>

        <View
            android:id="@+id/view_lay"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_2" />

        <LinearLayout
            android:id="@+id/distance_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin15"
            android:layout_marginTop="@dimen/margin5"
            android:orientation="horizontal" >

            <Button
                android:layout_width="@dimen/margin15"
                android:layout_height="@dimen/margin25"
                android:background="@drawable/shop_location_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin15"
                android:text="@string/sym_colon"
                android:textColor="@color/jolt_green"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/shop_distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin5"
                android:singleLine="true"
                android:textColor="@color/gray_2"
                android:textSize="@dimen/text14" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/margin5"
            android:background="@color/gray_2" />
    </LinearLayout>

</ScrollView>