<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/why_dont_bg" >

    <LinearLayout
        android:id="@+id/basic_all_drinks_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin20"
        android:layout_marginRight="@dimen/margin20"
        android:layout_marginTop="@dimen/margin30"
        android:orientation="horizontal"
        android:weightSum="2" >

        <TextView
            android:id="@+id/the_basics_txt"
            android:layout_width="@dimen/height150"
            android:layout_height="@dimen/margin40"
            android:layout_marginRight="@dimen/margin10"
            android:layout_weight="1"
            android:background="@drawable/classics_normal"
            android:gravity="center"
            android:text="@string/the_classics"
            android:textColor="@color/white"
            android:textSize="@dimen/text16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/all_drinks_txt"
            android:layout_width="@dimen/height150"
            android:layout_height="@dimen/margin40"
            android:layout_marginLeft="@dimen/margin10"
            android:layout_weight="1"
            android:background="@drawable/classics_normal"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/all_drinks"
            android:textColor="@color/white"
            android:textSize="@dimen/text16"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/basic_all_drinks_detail_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/basic_all_drinks_lay"
        android:layout_marginLeft="@dimen/margin20"
        android:layout_marginRight="@dimen/margin20"
        android:layout_marginTop="@dimen/margin10"
        android:orientation="horizontal"
        android:weightSum="2" >

        <TextView
            android:id="@+id/the_basics_detail_txt"
            android:layout_width="@dimen/height150"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin5"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text14" />

        <TextView
            android:id="@+id/all_drinks_detail_txt"
            android:layout_width="@dimen/height150"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin5"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text14" />
    </LinearLayout>

    <TextView
        android:id="@+id/got_it_txt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin40"
        android:layout_below="@+id/basic_all_drinks_detail_lay"
        android:layout_marginLeft="@dimen/margin40"
        android:layout_marginRight="@dimen/margin40"
        android:layout_marginTop="@dimen/margin15"
        android:background="@drawable/green_btn"
        android:clickable="true"
        android:gravity="center"
        android:onClick="onClick"
        android:text="@string/got_it"
        android:textColor="@color/white"
        android:textSize="@dimen/text16"
        android:textStyle="bold" />

</RelativeLayout>