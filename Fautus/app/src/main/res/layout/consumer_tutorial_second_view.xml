<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LayoutMatch"
    android:orientation="vertical"
    android:paddingBottom="@dimen/size40"
    android:weightSum="14">

    <RelativeLayout
        style="@style/LayoutWidMatch_HeiWei"
        android:layout_weight="7"
        android:background="@color/sky_blue">

        <ImageView
            style="@style/LayoutWidMatch_HeiWrap"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/con_tutorial_second_img" />

    </RelativeLayout>

    <RelativeLayout
        style="@style/LayoutWidMatch_HeiWei"
        android:layout_weight="7">

        <LinearLayout
            style="@style/LayoutMatch"
            android:layout_marginEnd="@dimen/size35"
            android:layout_marginStart="@dimen/size35"
            android:orientation="vertical"
            android:weightSum="4">

            <ScrollView
                style="@style/LayoutWidMatch_HeiWrap"
                android:layout_height="0dip"
                android:layout_weight="1.2">

                <TextView
                    style="@style/TextLight"
                    android:layout_gravity="center"
                    android:text="@string/choose_level"
                    android:textSize="@dimen/text13" />
            </ScrollView>


            <RelativeLayout
                style="@style/LayoutWidMatch_HeiWei"
                android:layout_weight="0.8">

                <ImageView
                    android:layout_width="@dimen/size30"
                    android:layout_height="@dimen/size30"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/tick_mark_img" />
            </RelativeLayout>

            <ScrollView
                style="@style/LayoutWidMatch_HeiWrap"
                android:layout_height="0dip"
                android:layout_weight="1.2">

                <TextView
                    style="@style/TextLight"
                    android:layout_gravity="center"
                    android:text="@string/within_seconds"
                    android:textSize="@dimen/text13" />
            </ScrollView>

            <RelativeLayout
                style="@style/LayoutWidMatch_HeiWei"
                android:layout_weight="0.8">

                <ImageView
                    android:layout_width="@dimen/size33"
                    android:layout_height="@dimen/size33"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ph_msg_img" />
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>