<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    style="@style/LayoutWidMatch_HeiWrap"
    android:layout_margin="@dimen/size15"
    android:background="@drawable/corner_rounded_white_bg">

    <LinearLayout
        style="@style/LayoutWidMatch_HeiWrap"
        android:orientation="vertical"
        android:padding="@dimen/size16">

        <TextView
            style="@style/TextRegular"
            android:layout_margin="@dimen/size5"
            android:paddingTop="@dimen/size10"
            android:text="@string/req_photographer"
            android:textSize="@dimen/text14" />


        <RelativeLayout
            android:layout_width="@dimen/size100"
            android:layout_height="@dimen/size100"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/size15"
            android:layout_marginTop="@dimen/size15">

            <com.fautus.fautusapp.utils.BackgroundFillColor
                android:id="@+id/background_fill_view"
                android:layout_width="@dimen/size100"
                android:layout_height="@dimen/size100"
                android:background="@color/hash"
                custom:fillColor="@color/sky_blue"
                custom:strokeColor="@color/white"
                custom:strokeWidth="0"
                custom:value="0" />

            <ImageView
                style="@style/LayoutMatch"
                android:adjustViewBounds="true"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/app_transparent_img" />
        </RelativeLayout>


        <TextView
            style="@style/TextRegular"
            android:layout_margin="@dimen/size5"
            android:paddingTop="@dimen/size10"
            android:text="@string/please_patient"
            android:textColor="@color/black_txt"
            android:textSize="@dimen/text12" />


        <TextView
            android:id="@+id/cancel_txt"
            style="@style/TextLight"
            android:background="?android:attr/selectableItemBackground"
            android:padding="@dimen/size5"
            android:text="@string/cancel_underline"
            android:textSize="@dimen/text12" />

    </LinearLayout>
</RelativeLayout>


