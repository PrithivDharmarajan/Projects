<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_view_for_font"
    style="@style/LayoutMatch"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        style="@style/LayoutWidMatch_HeiWrap"
        android:layout_margin="@dimen/size30"
        android:background="@drawable/corner_rounded_white_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/size15">

        <TextView
            android:id="@+id/header_txt"
            style="@style/TextBold"
            android:layout_marginBottom="@dimen/size3"
            android:layout_marginTop="@dimen/size3"
            android:text="@string/choose_type"
            android:textColor="@color/gray" />


        <Button
            android:id="@+id/camera_btn"
            style="@style/TextRegular"
            android:layout_height="@dimen/size33"
            android:layout_marginTop="@dimen/size10"

            android:textSize="@dimen/text15"
            android:background="@drawable/rounded_gray_bg"
            android:text="@string/camera"
            android:textAllCaps="false"
            android:textColor="@color/black_txt" />

        <Button
            android:id="@+id/gallery_btn"
            style="@style/TextRegular"
            android:layout_height="@dimen/size33"
            android:layout_marginTop="@dimen/size10"
            android:background="@drawable/rounded_gray_bg"
            android:text="@string/gallery"
            android:textSize="@dimen/text15"
            android:textAllCaps="false"
            android:textColor="@color/black_txt" />

        <Button
            android:id="@+id/cancel_btn"
            style="@style/TextRegular"
            android:layout_height="@dimen/size33"
            android:layout_marginBottom="@dimen/size10"
            android:layout_marginTop="@dimen/size10"
            android:background="@drawable/rounded_gray_bg"
            android:text="@android:string/cancel"
            android:textAllCaps="false"
            android:textSize="@dimen/text15"
            android:textColor="@color/black_txt" />
    </LinearLayout>

</LinearLayout>