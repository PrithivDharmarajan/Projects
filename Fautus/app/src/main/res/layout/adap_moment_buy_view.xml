<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LayoutWidMatch_HeiWrap"
    android:layout_height="@dimen/size100"
    android:padding="@dimen/size0.25">

    <com.fautus.fautusapp.utils.StripLineImageView
        android:id="@+id/moment_with_sky_img"
        style="@style/LayoutMatch"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/moment_with_out_sky_img"
        style="@style/LayoutMatch"
        android:adjustViewBounds="true"
        android:visibility="gone"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/moment_holder_img"
        style="@style/LayoutMatch"
        android:adjustViewBounds="true"
        android:alpha=".7"
        android:contentDescription="@string/app_name"
        android:padding="@dimen/size18"
        android:src="@drawable/cons_moment_holder_img"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/selected_img"
        android:layout_width="@dimen/size40"
        android:layout_height="@dimen/size40"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/size7"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        android:padding="@dimen/size4"
        android:src="@drawable/selected_img" />
</RelativeLayout>