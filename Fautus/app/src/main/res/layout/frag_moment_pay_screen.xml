<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LayoutMatch"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/strip_img_lay"
        style="@style/LayoutMatch"/>
    <LinearLayout
        style="@style/LayoutMatch"
        android:background="@color/white"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TextView
            style="@style/TextRegular"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:background="@color/black"
            android:ellipsize="end"
            android:text="@string/please_rate"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text13" />

        <RelativeLayout
            style="@style/LayoutWidMatch_HeiWei"
            android:layout_weight="7">

            <LinearLayout
                style="@style/LayoutMatch"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    style="@style/TextRegular"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:text="@string/friendliness"
                    android:textColor="@color/black_txt"
                    android:textSize="@dimen/text14" />

                <RatingBar
                    android:id="@+id/friendliness_rating_bar"
                    style="?android:attr/ratingBarStyleIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:isIndicator="false"
                    android:numStars="5"
                    android:progressBackgroundTint="@color/slide_bg"
                    android:progressTint="@color/sky_blue"
                    android:rating="5"
                    android:secondaryProgressTint="@color/sky_blue"
                    android:stepSize="1"
                    tools:targetApi="lollipop" />

                <TextView
                    android:id="@+id/quality_photo_txt"
                    style="@style/TextRegular"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:text="@string/quality_photo"
                    android:textColor="@color/black_txt"
                    android:textSize="@dimen/text14" />

                <RatingBar
                    android:id="@+id/quality_photo_rating_bar"
                    style="?android:attr/ratingBarStyleIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:isIndicator="false"
                    android:numStars="5"
                    android:progressBackgroundTint="@color/slide_bg"
                    android:progressTint="@color/sky_blue"
                    android:rating="5"
                    android:secondaryProgressTint="@color/sky_blue"
                    android:stepSize="1"
                    tools:targetApi="lollipop" />

                <com.fautus.fautusapp.utils.RoundedImageView
                    android:id="@+id/photographer_img"
                    style="@style/LayoutWidMatch_HeiWei"
                    android:layout_width="@dimen/size100"
                    android:scaleType="fitXY"
                    android:layout_weight="3" />

                <RelativeLayout
                    style="@style/LayoutWidMatch_HeiWei"
                    android:layout_weight="0.9"
                    android:layout_margin="@dimen/size10">

                    <LinearLayout
                        style="@style/LayoutMatch"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/no_tips_txt"
                            style="@style/TextRegular"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/sky_blue"
                            android:text="@string/no_tips"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text13" />

                        <View
                            android:layout_width="@dimen/size0.25"
                            android:layout_height="match_parent"
                            android:background="@color/sky_blue" />

                        <TextView
                            android:id="@+id/tips_one_txt"
                            style="@style/TextRegular"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/tip_one"
                            android:textColor="@color/sky_blue"
                            android:textSize="@dimen/text13" />

                        <View
                            android:layout_width="@dimen/size0.25"
                            android:layout_height="match_parent"
                            android:background="@color/sky_blue" />

                        <TextView
                            android:id="@+id/tips_two_txt"
                            style="@style/TextRegular"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/tip_two"
                            android:textColor="@color/sky_blue"
                            android:textSize="@dimen/text13" />

                        <View
                            android:layout_width="@dimen/size0.25"
                            android:layout_height="match_parent"
                            android:background="@color/sky_blue" />

                        <TextView
                            android:id="@+id/tips_five_txt"
                            style="@style/TextRegular"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/tip_five"
                            android:textColor="@color/sky_blue"
                            android:textSize="@dimen/text13" />

                        <View
                            android:layout_width="@dimen/size0.25"
                            android:layout_height="match_parent"
                            android:background="@color/sky_blue" />

                        <TextView
                            android:id="@+id/tips_ten_txt"
                            style="@style/TextRegular"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/tip_ten"
                            android:textColor="@color/sky_blue"
                            android:textSize="@dimen/text13" />
                    </LinearLayout>

                    <View
                        style="@style/LayoutMatch"
                        android:background="@drawable/corner_full_rounded_sky_bg" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>


        <RelativeLayout
            style="@style/LayoutWidMatch_HeiWei"
            android:layout_weight="2.5"
            android:background="@color/sky_blue">

            <LinearLayout
                style="@style/LayoutMatch"
                android:orientation="vertical"
                android:paddingBottom="@dimen/size5"
                android:paddingTop="@dimen/size5">

                <TextView
                    android:id="@+id/photo_selected_txt"
                    style="@style/TextRegular"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text15" />

                <TextView
                    android:id="@+id/amt_txt"
                    style="@style/TextBold"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text15" />

                <TextView
                    android:id="@+id/per_photo_txt"
                    style="@style/TextLight"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text13" />
            </LinearLayout>


        </RelativeLayout>

        <View
            style="@style/LayoutWidMatch_HeiWrap"
            android:layout_height="@dimen/size1"
            android:background="@color/black" />

        <LinearLayout
            android:id="@+id/pay_download_lay"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.9"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center">


            <TextView
                style="@style/TextRegular"
                android:layout_width="wrap_content"
                android:text="@string/pay_down"
                android:clickable="false"
                android:textAllCaps="true"
                android:textSize="@dimen/text14" />

            <ImageView
                android:layout_width="@dimen/size15"
                android:layout_height="@dimen/size15"
                android:layout_marginStart="@dimen/size10"
                android:clickable="false"
                android:adjustViewBounds="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/next_img" />
        </LinearLayout>

        <View
            style="@style/LayoutWidMatch_HeiWrap"
            android:layout_height="@dimen/size1"
            android:background="@color/black" />
    </LinearLayout>


</RelativeLayout>