<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LayoutWidMatch_HeiWrap"
    android:layout_margin="@dimen/size15"
    android:background="@drawable/corner_rounded_white_bg">

    <ScrollView style="@style/LayoutWidMatch_HeiWrap">

        <LinearLayout
            style="@style/LayoutWidMatch_HeiWrap"
            android:orientation="vertical"
            android:paddingTop="@dimen/size7">

            <TextView
                android:id="@+id/header_txt"
                style="@style/TextBold"
                android:layout_marginBottom="@dimen/size5"
                android:layout_marginTop="@dimen/size15"
                android:text="@string/app_name"
                android:textSize="@dimen/text14" />

            <TextView
                android:id="@+id/msg_txt"
                style="@style/TextRegular"
                android:layout_marginBottom="@dimen/size5"
                android:layout_marginTop="@dimen/size15"
                android:paddingEnd="@dimen/size25"
                android:paddingStart="@dimen/size25" />

            <TextView
                android:id="@+id/ok_txt"
                style="@style/TextBold"
                android:background="?android:attr/selectableItemBackground"
                android:padding="@dimen/size15"
                android:text="@string/ok_underline"
                android:textSize="@dimen/text14" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>


