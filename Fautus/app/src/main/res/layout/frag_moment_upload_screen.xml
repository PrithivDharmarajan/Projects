<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_lay"
    style="@style/LayoutMatch"
    android:orientation="vertical">

    <TextView
        android:id="@+id/date_txt"
        style="@style/TextLight"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@color/black"
        android:textColor="@color/white"
        android:textSize="@dimen/text12" />

    <RelativeLayout
        style="@style/LayoutWidMatch_HeiWei"
        android:layout_weight="5"
        android:background="@color/sky_blue">

        <TextView
            style="@style/TextRegular"
            android:layout_centerInParent="true"
            android:layout_marginEnd="@dimen/size20"
            android:layout_marginStart="@dimen/size20"
            android:text="@string/upload_info"
            android:textColor="@color/white"
            android:textSize="@dimen/text15" />

    </RelativeLayout>

    <RelativeLayout
        style="@style/LayoutWidMatch_HeiWei"
        android:layout_weight="4"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/upload_photos_lay"
            style="@style/LayoutWidMatch_HeiWrap"
            android:layout_height="@dimen/size35"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/size25"
            android:background="@drawable/rectangle_bordered_bg"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/upload_img"
                android:layout_width="@dimen/size35"
                android:layout_height="@dimen/size35"
                android:adjustViewBounds="true"
                android:contentDescription="@string/app_name"
                android:padding="@dimen/size5"
                android:src="@drawable/review_img" />

            <View
                android:layout_width="@dimen/size0.25"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <TextView
                style="@style/TextRegular"
                android:layout_gravity="center"
                android:text="@string/upload_photos"
                android:textAllCaps="true"
                android:textSize="@dimen/text14" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
