<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/footer_parent_lay"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin60"
    android:background="@color/green"
    android:clickable="false"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/footer_one_lay"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/footer_green_one"
            android:visibility="gone">

            <Button
                android:id="@+id/footer_one_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:onClick="onClick"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text18" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/footer_two_lay"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/footer_green_two"
            android:visibility="gone">

            <Button
                android:id="@+id/footer_two_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:onClick="onClick"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text19" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/footer_three_lay"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@color/footer_green_three"
            android:visibility="gone">

            <Button
                android:id="@+id/footer_three_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:onClick="onClick"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text19" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>