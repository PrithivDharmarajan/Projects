<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/parent_lay"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/top_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lay"
        android:layout_margin="@dimen/margin20"
        android:gravity="center"
        android:text="@string/brief_desc_item_cond"
        android:textColor="@color/blue_gray"
        android:textSize="@dimen/text24" />

    <LinearLayout
        android:id="@+id/lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/selling"
            android:layout_width="@dimen/height150"
            android:layout_height="@dimen/height150"
            android:background="@drawable/upload_blue_bg"
            android:paddingRight="@dimen/margin5"
            android:paddingLeft="@dimen/margin10"
            android:textAllCaps="false"
            android:text="@string/cond_new"
            android:textColor="@color/white"
            android:textSize="@dimen/text15" />

        <Button
            android:id="@+id/requesting"
            android:layout_width="@dimen/height150"
            android:layout_height="@dimen/height150"
            android:layout_marginLeft="@dimen/size50"
            android:background="@drawable/upload_green_bg"
            android:paddingRight="@dimen/margin5"
            android:paddingLeft="@dimen/margin10"
            android:text="@string/cond_used"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/text15" />
    </LinearLayout>
</RelativeLayout>