<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_view_for_font"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/section_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/margin10"
        android:gravity="center"
        android:padding="@dimen/margin3"
        android:textColor="@color/white"
        android:textSize="@dimen/text18"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/left_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/section_text"
        android:layout_marginBottom="@dimen/margin10"
        android:layout_marginLeft="@dimen/margin10"
        android:layout_marginRight="@dimen/margin20"

        android:layout_marginTop="@dimen/margin10"
        android:orientation="horizontal"
        android:visibility="visible">

        <com.bridgellc.bridge.utils.ImageViewRounded
            android:id="@+id/other_user"
            android:layout_width="@dimen/size50"
            android:layout_height="@dimen/size50"

            android:layout_gravity="center"
            android:background="@drawable/home_bubble_placeholder" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin10"
            android:paddingLeft="@dimen/margin20"
            android:paddingRight="@dimen/margin10"
            android:paddingTop="@dimen/margin10">

            <TextView
                android:id="@+id/left_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="left"
                android:textColor="@color/black"
                android:textSize="@dimen/text15"
                android:visibility="visible" />

            <TextView
                android:id="@+id/left_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"

                android:textColor="@color/white"
                android:textSize="@dimen/text13" />


        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/righ_layout"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/section_text"
        android:layout_marginBottom="@dimen/margin10"
        android:layout_marginRight="@dimen/margin10"
        android:layout_marginTop="@dimen/margin10">


        <com.bridgellc.bridge.utils.ImageViewRounded
            android:id="@+id/user_img"
            android:layout_width="@dimen/size50"
            android:layout_height="@dimen/size50"

            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:background="@drawable/home_bubble_placeholder" />

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin20"
            android:layout_marginRight="@dimen/margin10"
            android:layout_toLeftOf="@+id/user_img"
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin10"
            android:paddingLeft="@dimen/margin10"
            android:paddingRight="@dimen/margin20"
            android:paddingTop="@dimen/margin10">

            <TextView
                android:id="@+id/right_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="right"

                android:textColor="@color/black"
                android:textSize="@dimen/text15" />

            <TextView
                android:id="@+id/right_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"

                android:textColor="@color/white"
                android:textSize="@dimen/text13" />


        </LinearLayout>


    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding1"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/academics"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/righ_layout"
        android:background="@color/green" />

</RelativeLayout>
