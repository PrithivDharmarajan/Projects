<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/uploadPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view_pager_indicator"
        android:layout_marginTop="@dimen/margin90"/>


    <LinearLayout
        android:id="@+id/view_pager_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_lay"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/margin5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/one"
            android:layout_width="@dimen/margin15"
            android:layout_height="@dimen/margin15"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:contentDescription="@string/academics"
            android:src="@drawable/round" />

        <ImageView
            android:id="@+id/two"
            android:layout_width="@dimen/margin15"
            android:layout_height="@dimen/margin15"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_marginLeft="@dimen/margin10"
            android:contentDescription="@string/academics"
            android:src="@drawable/round" />

        <ImageView
            android:id="@+id/three"
            android:layout_width="@dimen/margin15"
            android:layout_height="@dimen/margin15"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:contentDescription="@string/academics"
            android:layout_marginLeft="@dimen/margin10"
            android:src="@drawable/round" />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/bottom_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <include layout="@layout/general_footer" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/header_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/search_header_with_bg" />
    </RelativeLayout>
</RelativeLayout>
