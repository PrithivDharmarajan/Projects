<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_dia_lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/anim_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin50"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/parent_lay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin40"
            android:layout_marginLeft="@dimen/margin18"
            android:layout_marginRight="@dimen/margin18"
            android:background="@drawable/gray_with_rounded_pg"
            android:layout_marginTop="@dimen/margin45"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/all_txt"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/green_with_rounded_pg"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onClick"
                android:tag="3"
                android:text="@string/all_c"
                android:textColor="@color/white"
                android:textSize="@dimen/text15" />

            <TextView
                android:id="@+id/shop_txt"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:gravity="center"
                android:tag="1"
                android:onClick="onClick"
                android:text="@string/shop_c"
                android:textColor="@color/blue_gray"
                android:textSize="@dimen/text15" />
            <TextView
                android:id="@+id/request_txt"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:gravity="center"
                android:tag="2"
                android:onClick="onClick"
                android:text="@string/request_c"
                android:textColor="@color/blue_gray"
                android:textSize="@dimen/text15" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin1"
            android:visibility="gone"
            android:background="@color/green"></View>

        <LinearLayout
            android:id="@+id/parent_lay1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin20"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/all"
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/all"
                android:textColor="@color/gray"
                android:textSize="@dimen/text20" />

            <TextView
                android:id="@+id/academics"
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/academics"
                android:textColor="@color/gray"
                android:textSize="@dimen/text20" />

            <TextView
                android:id="@+id/apparel"
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/apparel"
                android:textColor="@color/gray"
                android:textSize="@dimen/text20" />

            <TextView
                android:id="@+id/electronics"
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/electronics"
                android:textColor="@color/gray"
                android:textSize="@dimen/text20" />

            <TextView
                android:id="@+id/errands"
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/errands"
                android:textColor="@color/gray"
                android:textSize="@dimen/text20" />


            <TextView
                android:id="@+id/maintenance"
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/maintenance"
                android:textColor="@color/gray"
                android:textSize="@dimen/text20" />


            <TextView
                android:id="@+id/misc"
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/misc"
                android:textColor="@color/gray"
                android:textSize="@dimen/text20" />

            <TextView
                android:id="@+id/social"
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/social"
                android:visibility="gone"
                android:textColor="@color/gray"
                android:textSize="@dimen/text20" />
            <TextView
                android:id="@+id/ticket"
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/ticket"
                android:textColor="@color/gray"
                android:textSize="@dimen/text20" />
        </LinearLayout>

    </LinearLayout>

    <include
        android:id="@+id/header_lay"
        layout="@layout/general_header_for_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"></include>
</RelativeLayout>
