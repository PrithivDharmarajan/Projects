<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chec"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin60"
        android:background="@color/white">


        <RelativeLayout
            android:id="@+id/header_left_btn_lay"
            android:layout_width="@dimen/size50"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/header_left_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:clickable="false"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/back_img" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/header_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue_gray"
                android:textSize="@dimen/text18" />

            <TextView
                android:id="@+id/header_filesub_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/green"
                android:textSize="@dimen/text14"
                android:visibility="gone" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/header_right_btn_lay"
            android:layout_width="@dimen/size50"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"

            android:visibility="invisible">

            <ImageView
                android:id="@+id/header_right_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:clickable="false"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/back_img" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/header_right_btn_lay2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="false"
            android:gravity="end|center"
            android:visibility="gone">

            <TextView
                android:id="@+id/header_right_green_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:adjustViewBounds="true"
                android:background="@drawable/green_btn_bg"
                android:clickable="false"
                android:contentDescription="@string/app_name"
                android:gravity="center"
                android:minWidth="@dimen/margin80"
                android:paddingBottom="@dimen/padding7"
                android:paddingLeft="@dimen/margin13"
                android:paddingRight="@dimen/margin13"
                android:paddingTop="@dimen/padding7"
                android:textColor="@color/white"
                android:textSize="@dimen/text16" />


        </RelativeLayout>

        <TextView
            android:id="@+id/header_right_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin10"
            android:layout_marginRight="@dimen/margin10"
            android:textColor="@color/blue_gray"
            android:textSize="@dimen/text14"
            android:visibility="gone" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/curve_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin50">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin37"
            android:adjustViewBounds="true"
            android:layout_marginTop="@dimen/margin10"
            android:contentDescription="@string/term_condterm_cond"
            android:scaleType="fitXY"
            android:src="@drawable/header_bg_img" />

        <ImageView
            android:id="@+id/close_img"
            android:layout_width="@dimen/margin35"
            android:padding="@dimen/padding1"
            android:layout_height="@dimen/margin35"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:contentDescription="@string/first_name"
            android:src="@drawable/down_arrow_darkb_img" />
    </RelativeLayout>

</RelativeLayout>