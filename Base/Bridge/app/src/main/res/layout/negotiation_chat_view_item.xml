<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_view_for_font"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/section_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/margin10"
        android:gravity="center"
        android:padding="@dimen/margin3"
        android:textColor="@color/white"
        android:textSize="@dimen/text18"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/left_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/section_text"
        android:layout_marginBottom="@dimen/margin10"
        android:layout_marginLeft="@dimen/margin10"
        android:layout_marginRight="@dimen/margin20"
        android:layout_marginTop="@dimen/margin10"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/left_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin10"
            android:layout_gravity="center"
            android:visibility="visible"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/text12" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/left_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:background="@drawable/bridge_chat_green_bubble"
                android:gravity="center|left"
                android:paddingLeft="@dimen/margin20"
                android:paddingRight="@dimen/margin10"
                android:paddingTop="@dimen/margin10"
                android:paddingBottom="@dimen/margin10"
                android:textColor="@color/white"
                android:textSize="@dimen/text16" />

            <TextView
                android:id="@+id/left_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="right"
                android:layout_marginLeft="@dimen/margin15"
                android:textColor="@color/blue_gray"
                android:textSize="@dimen/text12" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/righ_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/section_text"
        android:layout_marginBottom="@dimen/margin10"
        android:layout_marginTop="@dimen/margin10"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin20"
            android:layout_marginRight="@dimen/margin10"
            android:layout_toLeftOf="@+id/right_profile"
            android:orientation="vertical">

            <TextView
                android:id="@+id/right_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@drawable/bridge_chat_blue_bubble"
                android:gravity="center|left"
                android:paddingLeft="@dimen/margin10"
                android:paddingRight="@dimen/margin20"
                android:paddingTop="@dimen/margin10"
                android:paddingBottom="@dimen/margin10"
                android:textColor="@color/white"
                android:textSize="@dimen/text16" />

            <TextView
                android:id="@+id/right_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:text="@string/academics"
                android:layout_marginRight="@dimen/margin15"
                android:textColor="@color/blue_gray"
                android:textSize="@dimen/text12" />
        </LinearLayout>

        <TextView
            android:id="@+id/right_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin10"
            android:layout_centerVertical="true"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/text14"
            />
    </RelativeLayout>

</RelativeLayout>
