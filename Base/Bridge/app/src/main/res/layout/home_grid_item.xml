<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/parent_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin5">

    <FrameLayout
        android:id="@+id/fram"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin5"
        android:layout_marginTop="@dimen/margin10">


        <com.bridgellc.bridge.utils.ImageViewRounded
            android:id="@+id/product_img"
            android:layout_width="@dimen/size90"
            android:layout_height="@dimen/size90"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/product_price"
            android:layout_width="@dimen/size90"
            android:layout_height="@dimen/size90"
            android:layout_gravity="center"
            android:background="@drawable/home_green_small"
            android:gravity="bottom|center_horizontal"
            android:paddingBottom="@dimen/margin7"
            android:textColor="@color/white"
            android:textSize="@dimen/text10"/>

        <LinearLayout

            android:layout_width="@dimen/size105"
            android:layout_height="@dimen/size75"
            android:layout_gravity="center"
            android:gravity="right"
            android:textColor="@color/white">

            <TextView
                android:id="@+id/chats_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@drawable/circle_bg"
                android:gravity="center"
                android:padding="@dimen/margin2"
                android:textColor="@color/white"
                android:textSize="@dimen/text10"
                android:visibility="gone"/>
        </LinearLayout>

    </FrameLayout>

    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fram"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:paddingLeft="@dimen/margin10"
        android:paddingRight="@dimen/margin10"
        android:textColor="@color/black"
        android:textSize="@dimen/text10"/>
</RelativeLayout>
