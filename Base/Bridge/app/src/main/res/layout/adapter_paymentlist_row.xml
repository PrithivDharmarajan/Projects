<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/payclick_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:padding="@dimen/margin7">

        <com.bridgellc.bridge.utils.ImageViewRounded
            android:id="@+id/product_img"
            android:layout_width="@dimen/margin90"
            android:layout_height="@dimen/margin90" />

        <TextView
            android:id="@+id/product_price"
            android:layout_width="@dimen/margin90"
            android:layout_height="@dimen/margin90"
            android:layout_gravity="left|center_horizontal"
            android:background="@drawable/home_green_small"
            android:gravity="bottom|center_horizontal"
            android:paddingBottom="@dimen/margin7"
            android:textColor="@color/white"
            android:textSize="@dimen/text12" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin90"
            android:layout_marginLeft="@dimen/margin13"
            android:layout_toRightOf="@+id/product_img"
            android:orientation="vertical"
            android:paddingTop="@dimen/margin10">

            <TextView
                android:id="@+id/name_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/blue_gray"
                android:textSize="@dimen/text18" />

            <TextView
                android:id="@+id/product_name_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/margin5"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/blue_gray"
                android:textSize="@dimen/text18" />

            <TextView
                android:id="@+id/date_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin5"
                android:padding="@dimen/margin1"
                android:textColor="@color/blue_gray"
                android:textSize="@dimen/text12"

                />
        </RelativeLayout>


        <ImageView
            android:layout_width="@dimen/margin20"
            android:layout_height="@dimen/margin20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin10"
            android:contentDescription="@string/academics"
            android:src="@drawable/right_arrow_lightb_img"
            android:visibility="gone" />


    </RelativeLayout>

</LinearLayout>