<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/left_side_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin15"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin70"
            android:layout_marginLeft="@dimen/margin10"
            android:layout_marginStart="@dimen/margin10"
            android:layout_toEndOf="@+id/left_user_name_img"
            android:layout_toRightOf="@+id/left_user_name_img"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/left_user_name_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/text15" />

            <TextView
                android:id="@+id/left_user_paymet_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/blue_gray"
                android:textSize="@dimen/text13" />
        </LinearLayout>

        <com.bridgellc.bridge.utils.ImageViewRounded
            android:id="@+id/left_user_name_img"
            android:layout_width="@dimen/margin70"
            android:layout_height="@dimen/margin70"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:src="@drawable/home_bubble_placeholder"
            android:scaleType="fitXY" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/right_side_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin15"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin70"
            android:layout_marginRight="@dimen/margin10"
            android:layout_marginEnd="@dimen/margin10"

            android:layout_toLeftOf="@+id/right_user_name_img"
            android:layout_toStartOf="@+id/right_user_name_img"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/right_user_name_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="end"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/text15" />

            <TextView
                android:id="@+id/right_user_paymet_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:ellipsize="end"
                android:gravity="end"
                android:maxLines="1"
                android:textColor="@color/blue_gray"
                android:textSize="@dimen/text13" />
        </LinearLayout>

        <com.bridgellc.bridge.utils.ImageViewRounded
            android:id="@+id/right_user_name_img"
            android:layout_width="@dimen/margin70"
            android:layout_height="@dimen/margin70"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:src="@drawable/home_bubble_placeholder"
            android:scaleType="fitXY" />

    </RelativeLayout>
</RelativeLayout>