<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/payclick_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin7">

        <RelativeLayout
            android:id="@+id/product_img_price_lay"
            android:layout_width="@dimen/margin100"
            android:layout_height="@dimen/margin100"
            android:layout_centerVertical="true">

            <com.bridgellc.bridge.utils.ImageViewRounded
                android:id="@+id/product_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/product_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left|center_horizontal"
                android:background="@drawable/home_green_small"
                android:gravity="bottom|center_horizontal"
                android:paddingBottom="@dimen/margin7"
                android:textColor="@color/white"
                android:textSize="@dimen/text12" />
        </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin13"
        android:layout_toRightOf="@+id/product_img_price_lay"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/margin7"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/date_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin10"
                android:padding="@dimen/margin1"
                android:layout_centerVertical="true"
                android:textColor="@color/blue_gray"
                android:textSize="@dimen/text12" />

            <TextView
                android:id="@+id/name_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/date_txt"
                android:layout_toStartOf="@+id/date_txt"
                android:layout_centerVertical="true"
                android:textColor="@color/blue_gray"
                android:textSize="@dimen/text17" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/margin10"
            android:layout_height="wrap_content">

            <RatingBar
                android:id="@+id/user_ratingbar"
                style="@style/CustomRatingBarBig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:isIndicator="true"
                android:rating="5"
                android:stepSize="0.5" />
        </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin10"
                android:layout_height="@dimen/margin30">
                <RelativeLayout
                    android:id="@+id/footer_one_lay"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/green">

                    <Button
                        android:id="@+id/acc_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:onClick="onClick"
                        android:text="@string/accept"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text15" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/footer_two_lay"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/swipe_red">

                    <Button
                        android:id="@+id/reject_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:onClick="onClick"
                        android:text="@string/reject"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text15" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/footer_three_lay"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/blue_btn_bg">

                    <Button
                        android:id="@+id/neg_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:text="@string/nego"
                        android:onClick="onClick"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text15" />
                </RelativeLayout>


            </LinearLayout>
    </LinearLayout>

    </RelativeLayout>

</LinearLayout>
