<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LayoutWidMatch_HeiWrap"
    android:layout_marginTop="@dimen/size10"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/alert_adpter_parent_lay"
        style="@style/LayoutMatch"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/tick_lay"
            android:layout_width="@dimen/size30"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:id="@+id/selection_img"
                android:layout_width="@dimen/size25"
                android:layout_height="@dimen/size30"
                android:adjustViewBounds="true"
                android:contentDescription="@string/app_name" />
        </LinearLayout>

        <LinearLayout
            style="@style/LayoutMatch"
            android:orientation="vertical">

            <TextView
                android:id="@+id/alert_name_txt"
                style="@style/TextHelveticaBold"
                android:layout_width="wrap_content"
                android:layout_marginStart="@dimen/size15"
                android:gravity="start"
                android:textColor="@color/black"
                android:textSize="@dimen/text14" />

            <LinearLayout
                style="@style/LayoutWidMatch_HeiWrap"
                android:layout_marginTop="@dimen/size7"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <LinearLayout
                    style="@style/LayoutWidWei_HeiWrap"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        style="@style/LayoutWidMatch_HeiWrap"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/alerts_property_type_txt"
                            style="@style/TextHelvetica"
                            android:layout_width="wrap_content"
                            android:layout_marginStart="@dimen/size15"
                            android:textColor="@color/gray_txt"
                            android:textSize="@dimen/text12" />

                        <TextView
                            android:id="@+id/alerts_min_price_txt"
                            style="@style/TextHelvetica"
                            android:layout_width="wrap_content"
                            android:layout_marginStart="@dimen/size5"
                            android:textColor="@color/gray_txt"
                            android:textSize="@dimen/text12" />

                        <TextView
                            android:id="@+id/alerts_max_price_txt"
                            style="@style/TextHelvetica"
                            android:layout_width="wrap_content"
                            android:textColor="@color/gray_txt"
                            android:textSize="@dimen/text12" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/LayoutWidMatch_HeiWrap"
                        android:layout_marginTop="@dimen/size7"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/alerts_beds_txt"
                            style="@style/TextHelvetica"
                            android:layout_width="wrap_content"
                            android:layout_marginStart="@dimen/size15"
                            android:textColor="@color/gray_txt"
                            android:textSize="@dimen/text12" />

                        <TextView
                            android:id="@+id/alerts_baths_txt"
                            style="@style/TextHelvetica"
                            android:layout_width="wrap_content"
                            android:textColor="@color/gray_txt"
                            android:textSize="@dimen/text12" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/alerts_keywords_txt"
                        style="@style/TextHelvetica"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="@dimen/size15"
                        android:layout_marginTop="@dimen/size7"
                        android:textColor="@color/gray_txt"
                        android:textSize="@dimen/text12" />
                </LinearLayout>

                <LinearLayout
                    style="@style/LayoutWidWei_HeiWrap"
                    android:layout_weight="1"
                    android:gravity="end|center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/alerts_count_txt"
                        style="@style/TextHelveticaBold"
                        android:layout_width="@dimen/size30"
                        android:layout_height="@dimen/size30"
                        android:background="@drawable/filter_key_box_without_corner"
                        android:textColor="@color/gray_txt" />

                    <ImageView
                        android:layout_width="@dimen/size25"
                        android:layout_height="@dimen/size25"
                        android:layout_marginStart="@dimen/size10"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/right_arrow" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>