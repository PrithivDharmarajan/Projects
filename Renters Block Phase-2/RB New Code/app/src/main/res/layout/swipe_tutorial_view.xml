<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LayoutMatch">

    <ImageView
        android:id="@+id/swipe_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size260"
        android:layout_marginTop="@dimen/size20"
        android:contentDescription="@color/back_color"
        android:src="@drawable/page_image" />

    <ScrollView
        style="@style/LayoutMatch"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/swipe_img">

        <LinearLayout
            style="@style/LayoutWidMatch_HeiWrap"
            android:orientation="vertical">

            <TextView
                android:id="@+id/swipe_top_txt"
                style="@style/TextHelveticaBold"
                android:layout_margin="@dimen/size10"
                android:padding="@dimen/size5"
                android:textColor="@color/app_blue"
                android:textSize="@dimen/text16" />

            <TextView
                android:id="@+id/swipe_msg_txt"
                style="@style/TextHelveticaBold"
                android:layout_margin="@dimen/size5"
                android:paddingEnd="@dimen/size5"
                android:paddingStart="@dimen/size5"
                android:textSize="@dimen/text14" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
