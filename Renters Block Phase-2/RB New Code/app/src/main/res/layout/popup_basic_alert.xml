<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LayoutWidMatch_HeiWrap"
    android:layout_margin="@dimen/size15"
    android:background="@color/gray_dark">

    <LinearLayout
        style="@style/LayoutWidMatch_HeiWrap"
        android:layout_margin="@dimen/size1"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            style="@style/TextHelveticaBold"
            android:background="@color/app_blue"
            android:padding="@dimen/size7"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/text16" />

        <TextView
            android:id="@+id/msg_txt"
            style="@style/TextHelveticaBold"
            android:padding="@dimen/size25"
            android:textSize="@dimen/text13" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size35"
            android:layout_marginBottom="@dimen/size15"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/size25"
            android:paddingStart="@dimen/size25"
            android:weightSum="2">

            <Button
                android:id="@+id/first_btn"
                style="@style/ButtonBold"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/size10"
                android:layout_weight="1"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/second_btn"
                style="@style/ButtonBold"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/size10"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:textSize="@dimen/text14"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>


