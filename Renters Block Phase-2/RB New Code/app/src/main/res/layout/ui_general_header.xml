<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size45"
    android:background="@color/app_blue">

    <RelativeLayout
        android:id="@+id/center_lay"
        style="@style/LayoutWrap"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_toEndOf="@+id/header_left_lay"
        android:layout_toStartOf="@+id/header_right_lay">


        <LinearLayout
            android:id="@+id/header_edt_lay"
            style="@style/LayoutWrap"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:visibility="gone">

            <EditText
                android:id="@+id/header_edt"
                style="@style/EditTextLight"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/enter_your_city"
                android:imeOptions="actionSearch"
                android:inputType="textNoSuggestions"
                android:paddingBottom="5dip"
                android:paddingTop="5dip"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />

            <View
                style="@style/LayoutWidMatch_HeiWrap"
                android:layout_height="@dimen/size1"
                android:background="@color/white" />
        </LinearLayout>

        <TextView
            android:id="@+id/header_txt"
            style="@style/TextHelveticaBold"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/text16" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/header_left_lay"
        style="@style/LayoutWrap"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/header_left_first_img_lay"
            android:layout_width="@dimen/size45"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:visibility="visible">

            <ImageView
                android:id="@+id/header_left_first_img"
                android:layout_width="@dimen/size20"
                android:layout_height="@dimen/size20"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"
                android:clickable="false"
                android:contentDescription="@string/app_name" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/header_left_second_img_lay"
            android:layout_width="@dimen/size45"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:visibility="gone">


            <ImageView
                android:id="@+id/header_left_second_img"
                android:layout_width="@dimen/size20"
                android:layout_height="@dimen/size20"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"
                android:clickable="false"
                android:contentDescription="@string/app_name" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/header_left_third_txt_lay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:visibility="gone">

            <TextView
                android:id="@+id/header_left_third_txt"
                style="@style/TextHelvetica"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/size5"
                android:layout_marginStart="@dimen/size5"
                android:textColor="@color/white"
                android:textSize="@dimen/text14" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/header_right_lay"
        style="@style/LayoutWrap"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true">

        <RelativeLayout
            android:id="@+id/header_right_first_img_lay"
            android:layout_width="@dimen/size45"
            android:layout_height="match_parent"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/header_right_first_img"
                android:layout_width="@dimen/size20"
                android:layout_height="@dimen/size20"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"
                android:clickable="false"
                android:contentDescription="@string/app_name" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/header_right_second_img_lay"
            android:layout_width="@dimen/size45"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:visibility="gone">

            <ImageView
                android:id="@+id/header_right_second_img"
                android:layout_width="@dimen/size20"
                android:layout_height="@dimen/size20"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"
                android:clickable="false"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/req_count_txt"
                android:layout_width="@dimen/size12"
                android:layout_height="@dimen/size12"
                android:layout_alignRight="@+id/header_right_second_img"
                android:layout_alignTop="@+id/header_right_second_img"
                android:background="@drawable/rectangle_white_bg"
                android:gravity="center"
                android:textSize="@dimen/size7" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/header_right_third_txt_lay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:visibility="gone">

            <TextView
                android:id="@+id/header_right_third_txt"
                style="@style/TextHelvetica"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/size5"
                android:layout_marginStart="@dimen/size5"
                android:textColor="@color/white"
                android:textSize="@dimen/text14" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
