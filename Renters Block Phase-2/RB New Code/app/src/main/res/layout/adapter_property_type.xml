<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   style="@style/LayoutWidMatch_HeiWrap"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/types_lay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size50"
        android:layout_marginEnd="@dimen/size10"
        android:layout_marginStart="@dimen/size10">

        <TextView
            style="@style/TextHelvetica"
            android:id="@+id/type_txt"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size50"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/type_img"
            android:gravity="center|start"
            android:text="@string/all_types"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/type_img"
            android:layout_width="@dimen/size25"
            android:layout_height="@dimen/size25"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/tick_on" />
    </RelativeLayout>

    <View
        android:id="@+id/all_type_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size1"
        android:layout_marginStart="@dimen/size10"
        android:background="@color/filter_view_line_bg" />

</LinearLayout>