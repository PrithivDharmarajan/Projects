<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_lay_key"
    style="@style/LayoutWrap"
    android:background="@drawable/keyword_blue_bg">

    <TextView
        android:id="@+id/keyword_txt"
        style="@style/TextHelvetica"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size25"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/size2"
        android:layout_marginStart="@dimen/size10"
        android:layout_marginTop="@dimen/size2"
        android:gravity="start|center"
        android:maxLines="1"
        android:textColor="@color/app_blue" />

    <TextView
        android:id="@+id/cross_txt"
        style="@style/LayoutWrap"
        android:layout_centerInParent="true"
        android:layout_marginEnd="@dimen/size10"
        android:layout_marginStart="@dimen/size10"
        android:layout_toEndOf="@+id/keyword_txt"
        android:text="X"
        android:textColor="@color/app_blue" />
</RelativeLayout>