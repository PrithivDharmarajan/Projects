<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LayoutWidMatch_HeiWrap"
    android:background="@color/slide_black_bg"
    android:orientation="vertical">

    <ImageView
        style="@style/LayoutWrap"
        android:layout_height="@dimen/size30"
        android:layout_gravity="center"
        android:layout_margin="@dimen/size15"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/rb_header_icon" />

    <RelativeLayout
        android:id="@+id/user_name_notification_lay"
        style="@style/LayoutWidMatch_HeiWrap"
        android:layout_marginEnd="@dimen/size15"
        android:layout_marginStart="@dimen/size15">

        <TextView
            android:id="@+id/user_name_txt"
            style="@style/TextHelveticaBold"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/notification_img"
            android:gravity="start"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/notification_img"
            android:layout_width="@dimen/size30"
            android:layout_height="@dimen/size30"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/size7"
            android:src="@drawable/notification_icon" />
    </RelativeLayout>
</LinearLayout>