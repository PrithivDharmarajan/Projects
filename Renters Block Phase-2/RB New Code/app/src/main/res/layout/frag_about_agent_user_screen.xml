<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LayoutMatch"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/main_lay"
        style="@style/LayoutWidMatch_HeiWrap"
        android:layout_marginLeft="@dimen/size5"
        android:layout_marginRight="@dimen/size5"
        android:layout_marginTop="@dimen/size25">

        <LinearLayout
            android:id="@+id/lay1"
            style="@style/LayoutWrap"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/size10"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/about_agent_user_image"
                android:layout_width="@dimen/size80"
                android:layout_height="@dimen/size80"
                android:adjustViewBounds="true"
                android:contentDescription="@drawable/house_four"
                android:scaleType="centerCrop"
                android:src="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay2"
            style="@style/LayoutWidMatch_HeiWrap"
            android:layout_marginStart="@dimen/size10"
            android:layout_toEndOf="@+id/lay1"
            android:orientation="vertical">

            <LinearLayout
                style="@style/LayoutWidMatch_HeiWrap"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/about_agent_user_name_txt"
                    style="@style/LayoutWrap"
                    android:layout_margin="@dimen/size1"
                    android:gravity="center|start"
                    android:paddingEnd="0dp"
                    android:paddingStart="@dimen/size5"
                    android:text=""
                    android:textColor="@color/dart_gray"
                    android:textSize="@dimen/text12"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                style="@style/LayoutWrap"
                android:layout_gravity="start|center"
                android:layout_marginTop="@dimen/size5"
                android:paddingEnd="0dp"
                android:paddingStart="@dimen/size5">

                <ImageView
                    android:layout_width="@dimen/size13"
                    android:layout_height="@dimen/size13"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/friends_icon" />

                <TextView
                    android:id="@+id/about_agent_friends_count_txt"
                    style="@style/TextHelvetica"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="@dimen/size2"
                    android:textColor="@color/blue_normal"
                    android:textSize="@dimen/text10" />

                <ImageView
                    android:layout_width="@dimen/size13"
                    android:layout_height="@dimen/size13"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/size5"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/review_star_icon" />

                <TextView
                    android:id="@+id/about_agent_reviews_count_txt"
                    style="@style/TextHelvetica"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="@dimen/size2"
                    android:textColor="@color/blue_normal"
                    android:textSize="@dimen/text10" />

                <ImageView
                    android:layout_width="@dimen/size13"
                    android:layout_height="@dimen/size13"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/size5"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/photo_icon" />

                <TextView
                    android:id="@+id/about_agent_photos_count_txt"
                    style="@style/TextHelvetica"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="@dimen/size2"
                    android:textColor="@color/blue_normal"
                    android:textSize="@dimen/text10" />
            </LinearLayout>

            <RatingBar
                android:id="@+id/about_agent_user_rating_bar"
                style="@style/MediumBlueRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/size5"
                android:focusable="false"
                android:isIndicator="true"
                android:scaleX="0.75"
                android:scaleY="0.75"
                android:transformPivotX="0dp"
                android:transformPivotY="0dip" />

            <TextView
                android:id="@+id/about_agent_agent_with_txt"
                style="@style/LayoutWidMatch_HeiWrap"
                android:layout_marginStart="@dimen/size1"
                android:layout_marginTop="@dimen/size5"
                android:gravity="center|start"
                android:paddingEnd="0dp"
                android:paddingStart="@dimen/size5"
                android:textColor="@color/gray_dark"
                android:textSize="@dimen/text11" />

            <LinearLayout
                style="@style/LayoutWidMatch_HeiWrap"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/about_agent_license"
                    style="@style/LayoutWrap"
                    android:layout_margin="@dimen/size1"
                    android:gravity="center|start"
                    android:paddingEnd="0dp"
                    android:paddingStart="@dimen/size5"
                    android:textColor="@color/gray_dark"
                    android:textSize="@dimen/text11"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/about_agent_license_txt"
                    style="@style/LayoutWidMatch_HeiWrap"
                    android:layout_margin="@dimen/size1"
                    android:gravity="center|start"
                    android:text=""
                    android:textColor="@color/gray_dark"
                    android:textSize="@dimen/text11" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_lay"
        android:layout_margin="@dimen/size20">

        <TextView
            android:id="@+id/about_agent_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size5"
            android:gravity="center|start"
            android:padding="@dimen/size5"
            android:scrollbars="none"
            android:text=""
            android:textColor="@color/gray_dark"
            android:textSize="@dimen/text13"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/about_agent__chat_img"
        android:layout_width="@dimen/size37"
        android:layout_height="@dimen/size37"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        android:padding="@dimen/size5"
        android:layout_alignTop="@+id/main_lay"
        android:layout_marginEnd="@dimen/size20"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/size30"
        android:src="@drawable/chat_icon"/>
</RelativeLayout>
