<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/account_parent_lay"
    style="@style/LayoutMatch"
    android:background="@drawable/login_trans_bg"
    android:orientation="vertical">

    <ScrollView
        style="@style/LayoutMatch"
        android:scrollbars="none">

        <LinearLayout
            style="@style/LayoutWidMatch_HeiWrap"
            android:layout_marginTop="@dimen/size20"
            android:orientation="vertical">

            <TextView
                android:id="@+id/create_acc_txt"
                style="@style/TextHelvetica"
                android:layout_marginTop="@dimen/size20"
                android:text="@string/create_account"
                android:textColor="@color/white"
                android:textSize="@dimen/text20"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/are_looking"
                style="@style/TextHelvetica"
                android:layout_marginStart="@dimen/size10"
                android:layout_marginTop="@dimen/size40"
                android:gravity="start"
                android:text="@string/are_looking"
                android:textColor="@color/white"
                android:textSize="@dimen/text18" />

            <LinearLayout
                style="@style/LayoutWidMatch_HeiWrap"
                android:layout_height="@dimen/size45"
                android:layout_marginLeft="@dimen/size10"
                android:layout_marginRight="@dimen/size10"
                android:layout_marginTop="@dimen/size10"
                android:background="@drawable/disable_bg"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/buy_txt"
                    style="@style/TextHelvetica"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/size1"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/buy"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text16" />

                <View
                    android:layout_width="@dimen/size1"
                    android:layout_height="match_parent"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/rent_txt"
                    style="@style/TextHelvetica"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/size1"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/rent"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text16" />

                <View
                    android:layout_width="@dimen/size1"
                    android:layout_height="match_parent"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/sell_txt"
                    style="@style/TextHelvetica"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_margin="@dimen/size1"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/sell"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text16" />
            </LinearLayout>

            <TextView
                android:id="@+id/or_txt"
                style="@style/TextHelvetica"
                android:layout_marginTop="@dimen/size30"
                android:text="@string/or"
                android:textColor="@color/white"
                android:textSize="@dimen/text18" />

            <TextView
                android:id="@+id/are_you_txt"
                style="@style/TextHelvetica"
                android:layout_marginStart="@dimen/size55"
                android:layout_marginTop="@dimen/size20"
                android:gravity="start"
                android:text="@string/are_you"
                android:textColor="@color/white"
                android:textSize="@dimen/text18" />

            <LinearLayout
                style="@style/LayoutWidMatch_HeiWrap"
                android:layout_height="@dimen/size45"
                android:layout_margin="@dimen/size10"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5" />

                <RelativeLayout
                    style="@style/LayoutWidWei_HeiWrap"
                    android:layout_weight="2"
                    android:background="@drawable/disable_bg">

                    <LinearLayout
                        style="@style/LayoutMatch"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/agent_txt"
                            style="@style/TextHelvetica"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/size1"
                            android:layout_weight="1"
                            android:text="@string/agent"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text16" />

                        <View
                            android:layout_width="@dimen/size1"
                            android:layout_height="match_parent"
                            android:background="@color/white" />

                        <TextView
                            android:id="@+id/broker_txt"
                            style="@style/TextHelvetica"
                            android:layout_height="match_parent"
                            android:layout_width="0dp"
                            android:layout_margin="@dimen/size1"
                            android:layout_weight="1"
                            android:text="@string/broker"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text16" />
                    </LinearLayout>
                </RelativeLayout>


                <View
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5" />
            </LinearLayout>

            <Button
                android:id="@+id/skip_btn"
                style="@style/ButtonBold"
                android:layout_width="@dimen/size100"
                android:layout_height="@dimen/size40"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/size40"
                android:background="@drawable/blue_btn"
                android:text="@string/skip"
                android:textAllCaps="true"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
