<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/find_an_agent_lay"
    style="@style/LayoutWidMatch_HeiWrap"
    android:layout_marginTop="@dimen/size5"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/profile_photo_lay"
        style="@style/LayoutWrap">

        <LinearLayout
            style="@style/LayoutWrap"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/size10"
            android:layout_marginTop="@dimen/size5"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/user_image"
                android:layout_width="@dimen/size80"
                android:layout_height="@dimen/size80"
                android:adjustViewBounds="true"
                android:src="@color/black"
                android:contentDescription="@drawable/house_four"
                android:scaleType="centerCrop" />

            <LinearLayout
                style="@style/LayoutWrap"
                android:layout_gravity="start|center"
                android:layout_marginTop="@dimen/size5">

                <ImageView
                    android:layout_width="@dimen/size13"
                    android:layout_height="@dimen/size13"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/friends_icon" />

                <TextView
                    android:id="@+id/friends_count_txt"
                    style="@style/TextHelvetica"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="@dimen/size2"
                    android:textColor="@color/blue_normal"
                    android:textSize="@dimen/text10" />

                <ImageView
                    android:layout_width="@dimen/size13"
                    android:layout_height="@dimen/size13"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/size5"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/review_star_icon" />

                <TextView
                    android:id="@+id/reviews_count_txt"
                    style="@style/TextHelvetica"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="@dimen/size2"
                    android:textColor="@color/blue_normal"
                    android:textSize="@dimen/text10" />

                <ImageView
                    android:layout_width="@dimen/size13"
                    android:layout_height="@dimen/size13"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/size5"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/photo_icon" />

                <TextView
                    android:id="@+id/photos_count_txt"
                    style="@style/TextHelvetica"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="@dimen/size2"
                    android:textColor="@color/blue_normal"
                    android:textSize="@dimen/text10" />
            </LinearLayout>

            <RatingBar
                android:id="@+id/user_rating_bar"
                style="@style/BigRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:focusable="false"
                android:isIndicator="true"
                android:scaleX="0.75"
                android:scaleY="0.75"
                android:transformPivotY="0dip"
                android:transformPivotX="0dp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        style="@style/LayoutWidMatch_HeiWrap"
        android:layout_marginStart="@dimen/size5"
        android:layout_toEndOf="@+id/profile_photo_lay"
        android:layout_toStartOf="@+id/btn_lat"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_name_txt"
            style="@style/TextHelvetica"
            android:layout_margin="@dimen/size1"
            android:gravity="center|start"
            android:textColor="@color/gray_dark"
            android:textSize="@dimen/text14" />

        <TextView
            android:id="@+id/agent_with_txt"
            style="@style/TextHelvetica"
            android:layout_margin="@dimen/size1"
            android:gravity="center|start"
            android:textColor="@color/grey"
            android:textSize="@dimen/text12" />

        <TextView
            android:id="@+id/in_place_txt"
            style="@style/TextHelvetica"
            android:layout_margin="@dimen/size1"
            android:gravity="center|start"
            android:textColor="@color/gray_dark"
            android:textSize="@dimen/text12" />

        <LinearLayout style="@style/LayoutWidMatch_HeiWrap">

            <TextView
                android:id="@+id/sold_homes_count_txt"
                style="@style/TextHelvetica"
                android:layout_width="wrap_content"
                android:layout_margin="@dimen/size1"
                android:gravity="center|start"
                android:textColor="@color/gray_dark"
                android:textSize="@dimen/text12" />

            <TextView
                style="@style/TextHelvetica"
                android:layout_margin="@dimen/size1"
                android:gravity="center|start"
                android:text="@string/sold_homes"
                android:textColor="@color/grey"
                android:textSize="@dimen/text12" />
        </LinearLayout>

        <LinearLayout style="@style/LayoutWidMatch_HeiWrap">

            <TextView
                android:id="@+id/active_listing_count_txt"
                style="@style/TextHelvetica"
                android:layout_width="wrap_content"
                android:layout_margin="@dimen/size1"
                android:gravity="center|start"
                android:textColor="@color/gray_dark"
                android:textSize="@dimen/text12" />

            <TextView
                android:id="@+id/active_listing_txt"
                style="@style/TextHelvetica"
                android:layout_margin="@dimen/size1"
                android:layout_marginStart="@dimen/size5"
                android:alpha="0.5"
                android:gravity="center|start"
                android:text="@string/agent_listings"
                android:textColor="@color/grey"
                android:textSize="@dimen/text12" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sponsor_lay"
            style="@style/LayoutWidMatch_HeiWrap"
            android:gravity="center">


            <ImageView
                android:layout_width="@dimen/size15"
                android:layout_height="@dimen/size15"
                android:adjustViewBounds="true"
                android:layout_marginEnd="@dimen/size5"
                android:src="@drawable/sponsor_icon"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/sponsor_txt"
                style="@style/TextHelvetica"
                android:gravity="center|start"
                android:layout_margin="@dimen/size1"
                android:text="@string/sponsored"
                android:textColor="@color/grey"
                android:textSize="@dimen/text12" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_lat"
        style="@style/LayoutWrap"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="@dimen/size10"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/friend_request_img"
            android:layout_width="@dimen/size37"
            android:layout_height="@dimen/size37"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/size5"
            android:src="@drawable/friend_request" />

        <ImageView
            android:id="@+id/chat_img"
            android:layout_width="@dimen/size37"
            android:layout_height="@dimen/size37"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/size5"
            android:src="@drawable/chat_icon" />

        <ImageView
            android:id="@+id/message_img"
            android:layout_width="@dimen/size37"
            android:layout_height="@dimen/size37"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/size5"
            android:src="@drawable/message_icon" />

    </LinearLayout>

    <View
        android:layout_below="@+id/profile_photo_lay"
        android:background="@color/black"
        android:layout_height="@dimen/size0.5"
        android:layout_marginTop="@dimen/size5"
        style="@style/LayoutWidMatch_HeiWrap"/>
</RelativeLayout>