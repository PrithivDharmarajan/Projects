<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LayoutMatch">

    <RelativeLayout
        style="@style/LayoutWrap"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/size2">

        <TextView
            android:id="@+id/key_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/keyword_blue_bg"
            android:gravity="start|center"
            android:paddingEnd="@dimen/size20"
            android:paddingStart="@dimen/size5"
            android:textColor="@color/app_blue"
            android:textSize="@dimen/text12" />

        <ImageView
            android:id="@+id/close_img"
            android:layout_width="@dimen/size10"
            android:layout_height="@dimen/size10"
            android:layout_alignEnd="@+id/key_txt"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/size10"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/key_close_icon" />
    </RelativeLayout>

</RelativeLayout>