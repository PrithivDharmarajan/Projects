<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/adapter_schedule_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size5"
        android:layout_marginTop="@dimen/size5">

        <LinearLayout
            android:id="@+id/alerts_check_lay"
            android:layout_width="@dimen/size50"
            android:layout_height="@dimen/size50"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:id="@+id/check_img"
                android:layout_width="@dimen/size20"
                android:layout_height="@dimen/size20"
                android:clickable="false"
                android:contentDescription="@string/app_name" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/time_date_lay"
            android:layout_width="@dimen/size100"
            android:layout_height="@dimen/size100"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/size10"
            android:layout_toEndOf="@+id/alerts_check_lay"
            android:visibility="visible">

            <TextView
                android:id="@+id/date_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/size15"
                android:text="25-05-2015"
                android:textColor="@color/grey"
                android:textSize="@dimen/text16" />

            <TextView
                android:id="@+id/time_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/date_txt"
                android:layout_marginTop="@dimen/size10"
                android:text="5:35 pm"
                android:textColor="@color/grey"
                android:textSize="@dimen/text16" />
        </RelativeLayout>

        <TextView
            android:id="@+id/friends_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/size10"
            android:layout_toEndOf="@+id/time_date_lay"
            android:text="Project Meeting"
            android:textColor="@color/black"
            android:textSize="@dimen/text16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/friends_group_admin_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/friends_group_name"
            android:layout_below="@+id/friends_group_name"
            android:layout_marginTop="@dimen/size10"
            android:text="Mike1sss"
            android:textColor="@color/black"
            android:textSize="@dimen/text14"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/btn_lay"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size30"
            android:layout_below="@+id/friends_group_admin_name"
            android:layout_marginTop="@dimen/size10"
            android:layout_toEndOf="@+id/time_date_lay"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/friend_check_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Online"
                android:textColor="@color/gray_dark"
                android:textSize="@dimen/text12"
                android:visibility="visible" />

            <TextView
                android:id="@+id/accept_txt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/size20"
                android:layout_marginStart="@dimen/size10"
                android:gravity="center"
                android:text="Accept"
                android:textColor="@color/gray_dark"
                android:textSize="@dimen/text14"
                android:textStyle="bold"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/reject_txt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/size10"
                android:gravity="center"
                android:text="Reject"
                android:textColor="@color/gray_dark"
                android:textSize="@dimen/text14"
                android:textStyle="bold"
                android:visibility="invisible" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size1"
        android:layout_marginEnd="@dimen/size10"
        android:layout_marginStart="@dimen/size10"
        android:background="@color/gray" />
</LinearLayout>