<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/parent_scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        tools:ignore="ObsoleteLayoutParam">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/main_lay"
                style="@style/LayoutWidMatch_HeiWrap"
                android:layout_marginLeft="@dimen/size5"
                android:layout_marginRight="@dimen/size5"
                android:layout_marginTop="@dimen/size25">

                <LinearLayout
                    android:id="@+id/lay1"
                    style="@style/LayoutWrap"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/size10"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/about_me_user_image"
                        android:layout_width="@dimen/size80"
                        android:layout_height="@dimen/size80"
                        android:adjustViewBounds="true"
                        android:contentDescription="@drawable/house_four"
                        android:scaleType="centerCrop"
                        android:src="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lay2"
                    style="@style/LayoutWidMatch_HeiWrap"
                    android:layout_marginStart="@dimen/size10"
                    android:layout_toEndOf="@+id/lay1"
                    android:orientation="vertical">

                    <LinearLayout
                        style="@style/LayoutWidMatch_HeiWrap"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/about_me_user_name_txt"
                            style="@style/LayoutWrap"
                            android:layout_margin="@dimen/size1"
                            android:gravity="center|start"
                            android:paddingEnd="0dp"
                            android:paddingStart="@dimen/size5"
                            android:text=""
                            android:textColor="@color/dart_gray"
                            android:textSize="@dimen/text12"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/LayoutWrap"
                        android:layout_gravity="start|center"
                        android:layout_marginTop="@dimen/size5"
                        android:paddingEnd="0dp"
                        android:paddingStart="@dimen/size5">

                        <ImageView
                            android:layout_width="@dimen/size13"
                            android:layout_height="@dimen/size13"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/friends_icon" />

                        <TextView
                            android:id="@+id/about_me_friends_count_txt"
                            style="@style/TextHelvetica"
                            android:layout_width="wrap_content"
                            android:layout_marginStart="@dimen/size2"
                            android:textColor="@color/blue_normal"
                            android:textSize="@dimen/text10" />

                        <ImageView
                            android:layout_width="@dimen/size13"
                            android:layout_height="@dimen/size13"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/size5"
                            android:adjustViewBounds="true"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/review_star_icon" />

                        <TextView
                            android:id="@+id/about_me_reviews_count_txt"
                            style="@style/TextHelvetica"
                            android:layout_width="wrap_content"
                            android:layout_marginStart="@dimen/size2"
                            android:textColor="@color/blue_normal"
                            android:textSize="@dimen/text10" />

                        <ImageView
                            android:layout_width="@dimen/size13"
                            android:layout_height="@dimen/size13"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/size5"
                            android:adjustViewBounds="true"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/photo_icon" />

                        <TextView
                            android:id="@+id/about_me_photos_count_txt"
                            style="@style/TextHelvetica"
                            android:layout_width="wrap_content"
                            android:layout_marginStart="@dimen/size2"
                            android:textColor="@color/blue_normal"
                            android:textSize="@dimen/text10" />
                    </LinearLayout>

                    <RatingBar
                        android:id="@+id/about_me_user_rating_bar"
                        style="@style/MediumBlueRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="@dimen/size5"
                        android:focusable="false"
                        android:isIndicator="true"
                        android:scaleX="0.75"
                        android:scaleY="0.75"
                        android:transformPivotX="0dp"
                        android:transformPivotY="0dip" />

                    <TextView
                        android:id="@+id/about_agent_me_with_txt"
                        style="@style/LayoutWidMatch_HeiWrap"
                        android:layout_marginStart="@dimen/size1"
                        android:layout_marginTop="@dimen/size5"
                        android:gravity="center|start"
                        android:paddingEnd="0dp"
                        android:paddingStart="@dimen/size5"
                        android:textColor="@color/gray_dark"
                        android:textSize="@dimen/text11" />

                    <LinearLayout
                        style="@style/LayoutWidMatch_HeiWrap"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/about_me_license"
                            style="@style/LayoutWrap"
                            android:layout_margin="@dimen/size1"
                            android:gravity="center|start"
                            android:paddingEnd="0dp"
                            android:paddingStart="@dimen/size5"
                            android:textColor="@color/gray_dark"
                            android:textSize="@dimen/text11"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/about_me_license_txt"
                            style="@style/LayoutWidMatch_HeiWrap"
                            android:layout_margin="@dimen/size1"
                            android:gravity="center|start"
                            android:text=""
                            android:textColor="@color/gray_dark"
                            android:textSize="@dimen/text11" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <View
                android:id="@+id/hide_view_1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size1"
                android:layout_marginLeft="@dimen/size10"
                android:layout_marginRight="@dimen/size10"
                android:layout_marginTop="20dp"
                android:background="@color/gray_dark" />

            <TextView
                android:id="@+id/photo_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size10"
                android:layout_marginTop="@dimen/size10"
                android:text="@string/photo"
                android:textColor="@color/black"
                android:textSize="@dimen/text12"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/photo_lay"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size8"
                android:gravity="center"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/user_image1_lay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size5">

                    <ImageView
                        android:id="@+id/user_image1"
                        android:layout_width="@dimen/size50"
                        android:layout_height="@dimen/size50"
                        android:src="@drawable/listing_add_photo_normal"
                        android:contentDescription="@string/app_name"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/user_image2_lay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size5">

                    <ImageView
                        android:id="@+id/user_image2"
                        android:layout_width="@dimen/size50"
                        android:layout_height="@dimen/size50"
                        android:onClick="onClick"
                        android:src="@drawable/listing_add_photo_normal"
                        android:contentDescription="@string/app_name"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/user_image3_lay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size5">

                    <ImageView
                        android:id="@+id/user_image3"
                        android:layout_width="@dimen/size50"
                        android:layout_height="@dimen/size50"
                        android:src="@drawable/listing_add_photo_normal"
                        android:contentDescription="@string/app_name"/>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/user_image4_lay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size5">

                    <ImageView
                        android:id="@+id/user_image4"
                        android:layout_width="@dimen/size50"
                        android:layout_height="@dimen/size50"
                        android:src="@drawable/listing_add_photo_normal"
                        android:contentDescription="@string/app_name"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/user_image5_lay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size5">

                    <ImageView
                        android:id="@+id/user_image5"
                        android:layout_width="@dimen/size50"
                        android:layout_height="@dimen/size50"
                        android:onClick="onClick"
                        android:src="@drawable/listing_add_photo_normal"
                        android:contentDescription="@string/app_name"/>


                </RelativeLayout>
            </LinearLayout>

            <View
                android:id="@+id/hide_view2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size1"
                android:layout_marginLeft="@dimen/size10"
                android:layout_marginRight="@dimen/size10"
                android:layout_marginTop="20dp"
                android:background="@color/gray_dark" />

            <TextView
                android:id="@+id/video_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size10"
                android:layout_marginTop="@dimen/size10"
                android:text="@string/video"
                android:textColor="@color/black"
                android:textSize="@dimen/text12"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/video_lay"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size8"
                android:gravity="center"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/user_video1_lay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size5">

                    <ImageView
                        android:id="@+id/user_video1_img"
                        android:layout_width="@dimen/size50"
                        android:layout_height="@dimen/size50"
                        android:src="@drawable/profile_about_me_add_video"
                        android:contentDescription="@string/app_name"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/user_video2_lay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size5">

                    <ImageView
                        android:id="@+id/user_video2_img"
                        android:layout_width="@dimen/size50"
                        android:layout_height="@dimen/size50"
                        android:src="@drawable/profile_about_me_add_video"
                        android:contentDescription="@string/app_name"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/user_video3_lay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size5">

                    <ImageView
                        android:id="@+id/user_video3_img"
                        android:layout_width="@dimen/size50"
                        android:layout_height="@dimen/size50"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/profile_about_me_add_video" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/user_video4_lay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size5">

                    <ImageView
                        android:id="@+id/user_video4_img"
                        android:layout_width="@dimen/size50"
                        android:layout_height="@dimen/size50"
                        android:onClick="onClick"
                        android:src="@drawable/profile_about_me_add_video"
                        android:contentDescription="@string/app_name"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/user_video5_lay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size5">

                    <ImageView
                        android:id="@+id/user_video5_img"
                        android:layout_width="@dimen/size50"
                        android:layout_height="@dimen/size50"
                        android:src="@drawable/profile_about_me_add_video"
                        android:contentDescription="@string/app_name"/>


                </RelativeLayout>
            </LinearLayout>
            <View
                android:id="@+id/view3"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size1"
                android:layout_marginLeft="@dimen/size10"
                android:layout_marginRight="@dimen/size10"
                android:layout_marginTop="20dp"
                android:background="@color/gray_dark" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size10"
                android:layout_marginTop="@dimen/size10"
                android:text="@string/about"
                android:textColor="@color/black"
                android:textSize="@dimen/text12"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/about_me_edt_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size15"
                android:layout_marginRight="@dimen/size15"
                android:layout_marginTop="@dimen/size15"
                android:background="@drawable/about_me_text_bg"
                android:gravity="start|top"
                android:padding="@dimen/size5"
                android:textColor="@color/black"
                android:textSize="@dimen/text12" >
            </EditText>

            <Button
                android:id="@+id/profile_update_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/size15"
                android:layout_marginBottom="@dimen/size15"
                android:text="@string/update"
                android:background="@drawable/apply_btn_over"
                android:gravity="center"
                 />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
