<resources>

    <!-- Base application theme. -->
    <!-- App general theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/app_blue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:windowBackground">@color/slide_black_bg</item>
        <!--<item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>-->
    </style>
    <!-- Splash theme -->
    <style name="AppSplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/app_blue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:windowBackground">@color/app_blue</item>
    </style>

    <!-- Layout style - (width and height both are match_parent) -->
    <style name="LayoutMatch" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Layout style - (width and height both are wrap_content) -->
    <style name="LayoutWrap" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Layout style - (width match_parent and  height wrap_content) -->
    <style name="LayoutWidMatch_HeiWrap" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Layout style - (width match_parent and  height 0dip) -->
    <style name="LayoutWidMatch_HeiWei" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dip</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- Layout style - (width 0dip and  height wrap_content) -->
    <style name="LayoutWidWei_HeiWrap" parent="AppTheme">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!--Text style Helvetica -->
    <style name="TextHelvetica" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text13</item>
        <item name="fontPath">fonts/Helvetica-Neue.otf</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <!--Text style Helvetica-Bold -->
    <style name="TextHelveticaBold" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text15</item>
        <item name="fontPath">fonts/Helvetica-Neue-Bold.otf</item>
        <item name="android:textColor">@color/dart_gray</item>
        <item name="android:gravity">center</item>
    </style>

    <!--Text style Helvetica-Light -->
    <style name="TextHelveticaLight" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text13</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="fontPath">fonts/Helvetica-Neue-Light.otf</item>
    </style>

    <!--Text style Helvetica-Bold -->
    <style name="TextSignikaBold" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text15</item>
        <item name="fontPath">fonts/Signika-Negative-Bold.otf</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <!--Button Bold FontStyle-->
    <style name="ButtonBold" parent="android:Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">@dimen/size37</item>
        <item name="android:textSize">@dimen/text15</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/blue_btn</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontPath">fonts/Helvetica-Neue-Bold.otf</item>
    </style>

    <!--Button Light FontStyle-->
    <style name="ButtonLight" parent="android:Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/text14</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontPath">fonts/Helvetica-Neue-Light.otf</item>
    </style>

    <style name="LoginButtonBold" parent="android:Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/dart_gray</item>
        <item name="android:layout_height">@dimen/size37</item>
        <item name="android:textSize">@dimen/text15</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontPath">fonts/Helvetica-Neue-Bold.otf</item>
    </style>

    <!--Edit text style Helvetica-Light-->
    <style name="EditTextLight" parent="android:Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size37</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/ash</item>
        <item name="android:textSize">@dimen/text12</item>
        <item name="android:textCursorDrawable">@drawable/edt_white_cursor</item>
        <item name="fontPath">fonts/Helvetica-Neue-Light.otf</item>
    </style>

    <style name="MediumBlueRating" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/medium_blue_ratingbar_bg</item>
        <item name="android:minHeight">19dp</item>
        <item name="android:maxHeight">19dp</item>
        <item name="android:minWidth">@dimen/size19</item>
        <item name="android:maxWidth">@dimen/size19</item>
        <item name="android:numStars">5</item>
    </style>

    <style name="BlueBigRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/post_review_rating</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minHeight">26dip</item>
        <item name="android:maxHeight">26dip</item>
        <item name="android:stepSize">1</item>
        <item name="android:numStars">5</item>
        <item name="android:isIndicator">false</item>
    </style>

    <style name="BigRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/big_blue_rating</item>
        <item name="android:minHeight">19dip</item>
        <item name="android:maxHeight">19dip</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">1</item>
        <item name="android:isIndicator">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

</resources>
