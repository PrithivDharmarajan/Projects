<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_trans"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/createLay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible" >

        <TextView
            android:id="@+id/create_acc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin20"
            android:gravity="center_horizontal"
            android:text="@string/create_account"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/text22"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/are_looking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/create_acc"
            android:layout_marginLeft="@dimen/margin10"
            android:layout_marginTop="@dimen/margin40"
            android:gravity="center|left"
            android:text="@string/are_looking"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/text18" />

        <LinearLayout
            android:id="@+id/buy_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/are_looking"
            android:layout_marginLeft="@dimen/margin10"
            android:layout_marginRight="@dimen/margin10"
            android:layout_marginTop="@dimen/margin10"
            android:orientation="horizontal"
            android:weightSum="3" >

            <TextView
                android:id="@+id/buy"
                android:layout_width="0dp"
                android:layout_height="@dimen/margin45"
                android:layout_weight="1"
                android:background="@drawable/disable_bg"
                android:gravity="center"
                android:text="@string/buy_text"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/text18" />

            <TextView
                android:id="@+id/rent"
                android:layout_width="0dp"
                android:layout_height="@dimen/margin45"
                android:layout_weight="1"
                android:background="@drawable/disable_bg"
                android:gravity="center"
                android:text="@string/rent_text"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/text18" />

            <TextView
                android:id="@+id/sell"
                android:layout_width="0dp"
                android:layout_height="@dimen/margin45"
                android:layout_weight="1"
                android:background="@drawable/disable_bg"
                android:gravity="center"
                android:text="@string/sell_text"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/text18" />
        </LinearLayout>

        <TextView
            android:id="@+id/or_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buy_lay"
            android:layout_marginTop="@dimen/margin30"
            android:gravity="center_horizontal"
            android:text="@string/or_text"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/text18" />

        <TextView
            android:id="@+id/are_you"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/or_text"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin55"
            android:layout_marginTop="@dimen/margin20"
            android:gravity="center|left"
            android:text="@string/are_you"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/text18" />

        <LinearLayout
            android:id="@+id/agent_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/are_you"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin55"
            android:layout_marginRight="@dimen/margin55"
            android:layout_marginTop="@dimen/margin10"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2" >

            <TextView
                android:id="@+id/agent"
                android:layout_width="0dp"
                android:layout_height="@dimen/margin45"
                android:layout_weight="1"
                android:background="@drawable/disable_bg"
                android:gravity="center"
                android:text="@string/agent_text"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/text18" />

            <TextView
                android:id="@+id/broker"
                android:layout_width="0dp"
                android:layout_height="@dimen/margin45"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/disable_bg"
                android:gravity="center"
                android:text="@string/broker_text"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/text18" />
        </LinearLayout>

        <Button
            android:id="@+id/skip"
            android:layout_width="@dimen/height100"
            android:layout_height="@dimen/margin40"
            android:layout_below="@+id/agent_lay"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin40"
            android:background="@drawable/ok_btn"
            android:text="@string/skip"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/text18"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>