<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin5"
        android:layout_marginTop="@dimen/margin5" >
        
        <RelativeLayout
            android:id="@+id/img_main_lay"
            android:layout_width="@dimen/height100"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin10" >

            <ImageView
                android:id="@+id/my_img1"
                android:layout_width="@dimen/height100"
                android:layout_height="wrap_content"
                android:src="@drawable/sche_clock_icon"
                android:visibility="gone" />

            <TextView
                android:id="@+id/accept_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:singleLine="true"
                android:text="25-05-2015"
                android:layout_marginTop="@dimen/margin5"
                android:textColor="@color/grey"
                android:textSize="@dimen/text16" />

            <TextView
                android:id="@+id/accept_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/accept_date_text"
                android:singleLine="true"
                android:text="5:35 pm"
                android:layout_marginTop="@dimen/margin10"
                android:textColor="@color/grey"
                android:textSize="@dimen/text16" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/name_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin10"
            android:layout_toRightOf="@+id/img_main_lay"
            android:gravity="center|left"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/accept_group_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin10"
                android:singleLine="true"
                android:text="Project Meeting"
                android:textColor="@color/black"
                android:textSize="@dimen/text16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/accept_group_admin_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin10"
                android:singleLine="true"
                android:text="Mike1"
                android:visibility="gone"
                android:textColor="@color/black"
                android:textSize="@dimen/text14"/>

            <TextView
                android:id="@+id/accept_current_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin10"
                android:singleLine="true"
                android:text="online"
                android:textColor="@color/black"
                android:textSize="@dimen/text14" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>