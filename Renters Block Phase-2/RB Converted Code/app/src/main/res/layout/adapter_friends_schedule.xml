<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin5"
        android:layout_marginTop="@dimen/margin5" >

        <FrameLayout
            android:id="@+id/img_main_lay"
            android:layout_width="@dimen/height130"
            android:layout_height="wrap_content"
            android:visibility="visible" >

            <RelativeLayout
                android:id="@+id/three_user_img_lay"
                android:layout_width="@dimen/height100"
                android:layout_height="@dimen/height100"
                android:layout_gravity="center"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/fr_date_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="@dimen/margin15"
                    android:singleLine="true"
                    android:text="25-05-2015"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text16" />

                <TextView
                    android:id="@+id/fr_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/fr_date_text"
                    android:layout_marginTop="@dimen/margin10"
                    android:singleLine="true"
                    android:text="5:35 pm"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text16" />
            </RelativeLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/friends_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/margin10"
            android:layout_toRightOf="@+id/img_main_lay"
            android:text="Project Meeting"
            android:textColor="@color/black"
            android:textSize="@dimen/text16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/friends_group_admin_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/friends_group_name"
            android:layout_below="@+id/friends_group_name"
            android:layout_marginTop="@dimen/margin10"
            android:text="Mike1sss"
            android:textColor="@color/black"
            android:textSize="@dimen/text14"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/btn_lay"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin30"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/friends_group_admin_name"
            android:layout_marginTop="@dimen/margin10"
            android:layout_toRightOf="@+id/img_main_lay"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/friend_check_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:text="Online"
                android:textColor="@color/dart_grey"
                android:textSize="@dimen/text12"
                android:visibility="visible" />

            <TextView
                android:id="@+id/accept_txt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/margin20"
                android:gravity="center"
                android:text="Accept"
                android:layout_marginLeft="@dimen/margin10"
                android:textColor="@color/dart_grey"
                android:textSize="@dimen/text14"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/reject_txt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/margin10"
                android:gravity="center"
                android:text="Reject"
                android:textColor="@color/dart_grey"
                android:textSize="@dimen/text14"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>