<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_trans"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_layout"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/top_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <EditText
                        android:id="@+id/business_name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin40"
                        android:layout_marginBottom="@dimen/margin5"
                        android:layout_marginLeft="@dimen/margin10"
                        android:layout_marginRight="@dimen/margin10"
                        android:layout_marginTop="@dimen/margin10"
                        android:background="@drawable/single_textbox"
                        android:hint="@string/business_name"
                        android:inputType="textCapSentences"
                        android:paddingLeft="@dimen/padding5"
                        android:textColor="@color/text_color_white"
                        android:textSize="@dimen/text16"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/first_name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin40"
                        android:layout_marginBottom="@dimen/margin5"
                        android:layout_marginLeft="@dimen/margin10"
                        android:layout_marginRight="@dimen/margin10"
                        android:layout_marginTop="@dimen/margin10"
                        android:background="@drawable/single_textbox"
                        android:hint="@string/first_name"
                        android:inputType="textCapSentences"
                        android:paddingLeft="@dimen/padding5"
                        android:textColor="@color/text_color_white"
                        android:textSize="@dimen/text16" />

                    <EditText
                        android:id="@+id/last_name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin40"
                        android:layout_marginBottom="@dimen/margin5"
                        android:layout_marginLeft="@dimen/margin10"
                        android:layout_marginRight="@dimen/margin10"
                        android:layout_marginTop="@dimen/padding2"
                        android:background="@drawable/single_textbox"
                        android:hint="@string/last_name"
                        android:inputType="textCapSentences"
                        android:paddingLeft="@dimen/padding5"
                        android:textColor="@color/text_color_white"
                        android:textSize="@dimen/text16" />

                    <EditText
                        android:id="@+id/user_name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin40"
                        android:layout_marginBottom="@dimen/margin5"
                        android:layout_marginLeft="@dimen/margin10"
                        android:layout_marginRight="@dimen/margin10"
                        android:layout_marginTop="@dimen/padding2"
                        android:background="@drawable/single_textbox"
                        android:hint="@string/user_name"
                        android:inputType="textCapSentences"
                        android:maxLength="25"
                        android:paddingLeft="@dimen/padding5"
                        android:textColor="@color/text_color_white"
                        android:textSize="@dimen/text16" />

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin40"
                        android:layout_marginBottom="@dimen/margin5"
                        android:layout_marginLeft="@dimen/margin10"
                        android:layout_marginRight="@dimen/margin10"
                        android:layout_marginTop="@dimen/padding2"
                        android:background="@drawable/single_textbox"
                        android:hint="@string/email_text"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="@dimen/padding5"
                        android:textColor="@color/text_color_white"
                        android:textSize="@dimen/text16" />

                    <EditText
                        android:id="@+id/pasword"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin40"
                        android:layout_marginBottom="@dimen/margin5"
                        android:layout_marginLeft="@dimen/margin10"
                        android:layout_marginRight="@dimen/margin10"
                        android:layout_marginTop="@dimen/padding2"
                        android:background="@drawable/single_textbox"
                        android:clickable="true"
                        android:hint="@string/pass_text"
                        android:inputType="textPassword"
                        android:paddingLeft="@dimen/padding5"
                        android:textColor="@color/text_color_white"
                        android:textSize="@dimen/text16" />

                    <EditText
                        android:id="@+id/zip"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin40"
                        android:layout_marginBottom="@dimen/margin5"
                        android:layout_marginLeft="@dimen/margin10"
                        android:layout_marginRight="@dimen/margin10"
                        android:layout_marginTop="@dimen/padding2"
                        android:background="@drawable/single_textbox"
                        android:hint="@string/zip_text"
                        android:inputType="textCapSentences"
                        android:paddingLeft="@dimen/padding5"
                        android:textColor="@color/text_color_white"
                        android:textSize="@dimen/text16" />

                    <EditText
                        android:id="@+id/phone_num"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin40"
                        android:layout_marginBottom="@dimen/margin5"
                        android:layout_marginLeft="@dimen/margin10"
                        android:layout_marginRight="@dimen/margin10"
                        android:layout_marginTop="@dimen/padding2"
                        android:background="@drawable/single_textbox"
                        android:hint="@string/phone_text"
                        android:inputType="phone"
                        android:paddingLeft="@dimen/padding5"
                        android:textColor="@color/text_color_white"
                        android:textSize="@dimen/text16" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cancel_layout_buy_rent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/top_layout"
                    android:layout_marginLeft="@dimen/margin20"
                    android:layout_marginRight="@dimen/margin20"
                    android:layout_marginTop="@dimen/margin40"
                    android:orientation="horizontal"
                    android:weightSum="2" >

                    <Button
                        android:id="@+id/cancel"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/margin35"
                        android:layout_marginRight="@dimen/margin5"
                        android:layout_weight="0.8"
                        android:background="@drawable/cancel"
                        android:clickable="true"
                        android:gravity="center"
                        android:onClick="onClick"
                        android:text="@string/cancel_caps"
                        android:textColor="@color/text_color_white"
                        android:textSize="@dimen/text16"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:text="" />

                    <Button
                        android:id="@+id/register"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/margin35"
                        android:layout_marginLeft="@dimen/margin5"
                        android:layout_weight="0.8"
                        android:background="@drawable/register"
                        android:gravity="center"
                        android:onClick="onClick"
                        android:text="@string/register"
                        android:textColor="@color/text_color_white"
                        android:textSize="@dimen/text16"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/agree_terms_buy_rent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cancel_layout_buy_rent"
                    android:layout_marginBottom="@dimen/padding2"
                    android:layout_marginLeft="@dimen/margin10"
                    android:layout_marginRight="@dimen/margin10"
                    android:layout_marginTop="@dimen/margin10"
                    android:gravity="center"
                    android:text="@string/agree_text"
                    android:textColor="@color/text_color_white"
                    android:textSize="@dimen/text12" />

                <LinearLayout
                    android:id="@+id/address_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height130"
                    android:layout_below="@+id/top_layout"
                    android:layout_marginLeft="@dimen/margin10"
                    android:layout_marginRight="@dimen/margin10"
                    android:layout_marginTop="@dimen/margin10"
                    android:background="@drawable/address_bg"
                    android:orientation="vertical" >

                    <EditText
                        android:id="@+id/address_one"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin40"
                        android:layout_marginBottom="@dimen/padding2"
                        android:layout_marginTop="@dimen/padding2"
                        android:background="@null"
                        android:hint="@string/address_1"
                        android:inputType="text"
                        android:paddingLeft="@dimen/padding5"
                        android:textColor="@color/text_color_white"
                        android:textSize="@dimen/text16" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.5dp"
                        android:background="@drawable/underline" />

                    <EditText
                        android:id="@+id/address_two"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin40"
                        android:layout_marginBottom="@dimen/padding2"
                        android:layout_marginTop="@dimen/padding2"
                        android:background="@null"
                        android:hint="@string/address_2"
                        android:inputType="text"
                        android:paddingLeft="@dimen/padding5"
                        android:textColor="@color/text_color_white"
                        android:textSize="@dimen/text16" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.5dp"
                        android:background="@drawable/underline" />

                    <EditText
                        android:id="@+id/city_state_zip"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin40"
                        android:layout_marginBottom="@dimen/padding2"
                        android:layout_marginTop="@dimen/padding2"
                        android:background="@null"
                        android:hint="@string/city_state_zip"
                        android:inputType="text"
                        android:paddingLeft="@dimen/padding5"
                        android:textColor="@color/text_color_white"
                        android:textSize="@dimen/text16" />
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/margin10"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/option_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin10"
            android:orientation="vertical"
            android:visibility="visible" >

            <LinearLayout
                android:id="@+id/profile_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="onClick"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="2" >

                <LinearLayout
                    android:id="@+id/enhanced_radio_lay"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/margin40"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/agent_broker_box"
                    android:clickable="true"
                    android:gravity="center|left"
                    android:onClick="onClick"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/enhanced_radio"
                        android:layout_width="@dimen/margin30"
                        android:layout_height="@dimen/margin30"
                        android:layout_marginLeft="@dimen/margin5"
                        android:background="@drawable/check_enable"
                        android:clickable="false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin5"
                        android:gravity="center|left"
                        android:text="@string/enhanced_profile"
                        android:textColor="@color/text_color_white"
                        android:textSize="@dimen/text14" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/standard_radio_lay"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/margin40"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin10"
                    android:layout_weight="1"
                    android:background="@drawable/agent_broker_box"
                    android:clickable="true"
                    android:gravity="center|left"
                    android:onClick="onClick"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/standard_radio"
                        android:layout_width="@dimen/margin30"
                        android:layout_height="@dimen/margin30"
                        android:layout_marginLeft="@dimen/margin5"
                        android:background="@drawable/check_disable"
                        android:clickable="false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin5"
                        android:gravity="center|left"
                        android:text="@string/standard_profile"
                        android:textColor="@color/text_color_white"
                        android:textSize="@dimen/text14" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="2" >

                <LinearLayout
                    android:id="@+id/home_radio_lay"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/margin40"
                    android:layout_gravity="center|left"
                    android:layout_weight="1"
                    android:background="@drawable/agent_broker_box"
                    android:clickable="true"
                    android:gravity="center|left"
                    android:onClick="onClick"
                    android:orientation="horizontal"
                    android:visibility="visible" >

                    <Button
                        android:id="@+id/home_radio"
                        android:layout_width="@dimen/margin30"
                        android:layout_height="@dimen/margin30"
                        android:layout_marginLeft="@dimen/margin5"
                        android:background="@drawable/check_enable"
                        android:clickable="false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin5"
                        android:gravity="center|left"
                        android:text="@string/home_owner"
                        android:textColor="@color/text_color_white"
                        android:textSize="@dimen/text14" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/broker_radio_lay"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/margin40"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="@dimen/margin10"
                    android:layout_weight="1"
                    android:background="@drawable/agent_broker_box"
                    android:clickable="true"
                    android:gravity="center|left"
                    android:onClick="onClick"
                    android:orientation="horizontal"
                    android:visibility="visible" >

                    <Button
                        android:id="@+id/broker_radio"
                        android:layout_width="@dimen/margin30"
                        android:layout_height="@dimen/margin30"
                        android:layout_marginLeft="@dimen/margin5"
                        android:background="@drawable/check_disable"
                        android:clickable="false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin5"
                        android:gravity="center|left"
                        android:text="@string/broker_text"
                        android:textColor="@color/text_color_white"
                        android:textSize="@dimen/text14" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/account_option"
                android:layout_width="@dimen/height165"
                android:layout_height="@dimen/margin40"
                android:layout_gravity="center|left"
                android:background="@drawable/create_acc_disable"
                android:clickable="true"
                android:gravity="center|left"
                android:onClick="onClick"
                android:orientation="horizontal"
                android:visibility="gone" >

                <Button
                    android:id="@+id/account_check"
                    android:layout_width="@dimen/margin30"
                    android:layout_height="@dimen/margin30"
                    android:layout_marginLeft="@dimen/margin5"
                    android:background="@drawable/check_enable"
                    android:clickable="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin5"
                    android:gravity="center"
                    android:text="@string/acc_manager"
                    android:textColor="@color/text_color_white"
                    android:textSize="@dimen/text14" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cancel_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/option_layout"
            android:layout_marginLeft="@dimen/margin20"
            android:layout_marginRight="@dimen/margin20"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="2" >

            <Button
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="@dimen/margin35"
                android:layout_marginRight="@dimen/margin5"
                android:layout_weight="0.8"
                android:background="@drawable/cancel"
                android:clickable="true"
                android:gravity="center"
                android:textStyle="bold"
                android:onClick="onClick"
                android:text="@string/cancel_caps"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/text16" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="" />

            <Button
                android:id="@+id/register"
                android:layout_width="0dp"
                android:layout_height="@dimen/margin35"
                android:layout_marginLeft="@dimen/margin5"
                android:layout_weight="0.8"
                android:background="@drawable/register"
                android:textStyle="bold"
                android:gravity="center"
                android:onClick="onClick"
                android:text="@string/register"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/text16" />
        </LinearLayout>

        <TextView
            android:id="@+id/agree_terms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cancel_layout"
            android:layout_marginBottom="@dimen/padding2"
            android:layout_marginLeft="@dimen/margin10"
            android:layout_marginRight="@dimen/margin10"
            android:layout_marginTop="@dimen/margin10"
            android:gravity="center"
            android:text="@string/agree_text"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/text12"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>