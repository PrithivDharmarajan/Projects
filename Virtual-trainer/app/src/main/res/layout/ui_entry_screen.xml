<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/size15"
    android:orientation="vertical"
    android:weightSum="3">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dip"
        android:layout_margin="@dimen/size5"
        android:layout_weight="1">

        <TextView
            android:id="@+id/login_txt"
            style="@style/TextRegularStyle"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/size5"
            android:text="@string/login"
            android:textSize="@dimen/text14" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/login_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/login_txt"
            android:src="@drawable/entry_login" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dip"
        android:layout_margin="@dimen/size5"
        android:layout_weight="1">

        <TextView
            android:id="@+id/register_txt"
            style="@style/TextRegularStyle"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/size5"
            android:text="@string/register"
            android:textSize="@dimen/text14" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/register_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/register_txt"
            android:src="@drawable/entry_register" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dip"
        android:layout_margin="@dimen/size5"
        android:layout_weight="1">

        <TextView
            android:id="@+id/guest_txt"
            style="@style/TextRegularStyle"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/size5"
            android:text="@string/join_gust"
            android:textSize="@dimen/text14" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/guest_img"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/guest_txt"
            android:src="@drawable/entry_guest" />

    </RelativeLayout>
</LinearLayout>