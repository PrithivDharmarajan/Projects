<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size20"
        android:background="@drawable/dialog_white_bg"
        android:orientation="vertical"
        android:padding="@dimen/size20">

        <TextView
            style="@style/TextBoldStyle"
            android:layout_marginTop="@dimen/size20"
            android:text="@string/join_stream"
            android:textColor="@color/txt_black"
            android:textSize="@dimen/text17" />

        <EditText
            android:id="@+id/meeting_id_edt"
            style="@style/EditTextStyle"
            android:layout_marginBottom="@dimen/size20"
            android:layout_marginTop="@dimen/size20"
            android:hint="@string/meeting_id"
            android:imeOptions="actionDone"
            android:inputType="textEmailAddress|textNoSuggestions"
            android:maxLength="40" />


        <Button
            android:id="@+id/submit_btn"
            style="@style/ButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size40"
            android:layout_marginEnd="@dimen/size40"
            android:layout_marginLeft="@dimen/size40"
            android:layout_marginRight="@dimen/size40"
            android:layout_marginStart="@dimen/size40"
            android:background="@drawable/orange_with_yellow_btn"
            android:text="@string/submit" />


    </LinearLayout>

    <ImageView
        android:id="@+id/close_img"
        android:layout_width="@dimen/size40"
        android:layout_height="@dimen/size40"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        android:padding="@dimen/size5"
        android:scaleType="fitXY"
        android:src="@drawable/close_btn" />


</RelativeLayout>
