<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/menu_with_curve_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/general_header_lay"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/menu_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/screen_bg"
            android:orientation="vertical"
            android:padding="@dimen/size15">

            <LinearLayout
                android:id="@+id/profile_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/size5">

                <ImageView
                    android:layout_width="@dimen/size25"
                    android:layout_height="@dimen/size25"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY"
                    android:src="@drawable/profile_img"/>

                <TextView
                    style="@style/TextLightStyle"
                    android:layout_marginEnd="@dimen/size30"
                    android:text="@string/profile"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size1"
                android:background="@color/header_gray"/>

            <LinearLayout
                android:id="@+id/help_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size7"
                android:gravity="center"
                android:padding="@dimen/size5">

                <ImageView
                    android:layout_width="@dimen/size25"
                    android:layout_height="@dimen/size25"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY"
                    android:src="@drawable/help_img"/>

                <TextView
                    style="@style/TextLightStyle"
                    android:layout_marginEnd="@dimen/size30"
                    android:text="@string/help"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size1"
                android:background="@color/header_gray"/>

            <LinearLayout
                android:id="@+id/buy_full_version_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size7"
                android:gravity="center"
                android:padding="@dimen/size5">

                <ImageView
                    android:layout_width="@dimen/size25"
                    android:layout_height="@dimen/size25"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY"
                    android:src="@drawable/buy_full_version_img"/>

                <TextView
                    style="@style/TextLightStyle"
                    android:layout_marginEnd="@dimen/size30"
                    android:text="@string/buy_full_version"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size1"
                android:background="@color/header_gray"/>

            <LinearLayout
                android:id="@+id/terms_condition_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size7"
                android:gravity="center"
                android:padding="@dimen/size5">

                <ImageView
                    android:layout_width="@dimen/size25"
                    android:layout_height="@dimen/size25"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY"
                    android:src="@drawable/condition_img"/>

                <TextView
                    style="@style/TextLightStyle"
                    android:layout_marginEnd="@dimen/size30"
                    android:text="@string/terms_cond"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size1"
                android:background="@color/header_gray"/>

            <LinearLayout
                android:id="@+id/support_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size7"
                android:gravity="center"
                android:padding="@dimen/size5">

                <ImageView
                    android:layout_width="@dimen/size25"
                    android:layout_height="@dimen/size25"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY"
                    android:src="@drawable/support_img"/>

                <TextView
                    style="@style/TextLightStyle"
                    android:layout_marginEnd="@dimen/size30"
                    android:text="@string/support"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size1"
                android:background="@color/header_gray"/>

            <LinearLayout
                android:id="@+id/logout_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size7"
                android:gravity="center"
                android:padding="@dimen/size5">

                <ImageView
                    android:layout_width="@dimen/size25"
                    android:layout_height="@dimen/size25"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY"
                    android:src="@drawable/logout_img"/>

                <TextView
                    style="@style/TextLightStyle"
                    android:layout_marginEnd="@dimen/size30"
                    android:text="@string/logout"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size1"
                android:background="@color/header_gray"/>
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/menu_curve_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/menu_lay">


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size25"
                android:background="@color/header_gray"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size8">


                <ImageView
                    android:layout_width="@dimen/size35"
                    android:layout_height="@dimen/size35"
                    android:layout_centerHorizontal="true"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY"
                    android:src="@drawable/header_circle_btn"/>

                <ImageView
                    android:layout_width="@dimen/size35"
                    android:layout_height="@dimen/size35"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="@string/app_name"
                    android:padding="@dimen/size4"
                    android:src="@drawable/slide_menu_img"/>
            </RelativeLayout>
        </RelativeLayout>

        <View

            android:id="@+id/menu_out_side_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/menu_curve_lay"
            android:background="@color/black_transparent"
            android:visibility="gone"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/general_header_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/ui_general_header"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/header_curve_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size33"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size17"
            android:layout_marginTop="@dimen/size17"
            android:background="@color/black"
            android:gravity="end"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/joinies_txt"
                style="@style/TextLightStyle"
                android:layout_width="0dip"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/size7"
                android:layout_weight="1.2"
                android:gravity="end"
                android:maxLines="1"
                android:text="@string/trial_version"
                android:textSize="@dimen/text8"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="@dimen/size35"
                android:layout_height="@dimen/size35"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/header_circle_btn"/>

            <ImageView
                android:id="@+id/header_menu_img"
                android:layout_width="@dimen/size35"
                android:layout_height="@dimen/size35"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/app_name"
                android:padding="@dimen/size4"
                android:src="@drawable/slide_menu_img"/>

        </RelativeLayout>


    </RelativeLayout>
</RelativeLayout>