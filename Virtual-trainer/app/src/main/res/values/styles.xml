<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black_transparent</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:windowBackground">@color/screen_bg</item>

    </style>

    <style name="TextBoldStyle" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text18</item>
        <item name="fontPath">fonts/Roboto-Bold.otf</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextRegularStyle" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text18</item>
        <item name="fontPath">fonts/Roboto-Regular.otf</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="TextLightStyle" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text15</item>
        <item name="fontPath">fonts/Roboto-Light.otf</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="EditTextStyle" parent="android:Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size37</item>
        <item name="android:paddingLeft">@dimen/size20</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:textColorHint">@color/light_black</item>
        <item name="android:textSize">@dimen/text13</item>
        <item name="android:background">@drawable/white_bg</item>
        <item name="fontPath">fonts/Roboto-Light.otf</item>
    </style>

    <style name="ButtonStyle" parent="android:Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:textSize">@dimen/text15</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontPath">fonts/Roboto-Bold.otf</item>
    </style>

    <style name="DialogBoxAnimation">
        <!--<item name="android:windowEnterAnimation">@anim/anim_in_bottom</item>-->
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowExitAnimation">@anim/anim_in_top</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black_transparent</item>
        <item name="colorAccent">@color/black</item>
    </style>

</resources>
