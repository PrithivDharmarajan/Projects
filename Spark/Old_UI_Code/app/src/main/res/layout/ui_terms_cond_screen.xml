<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_lay"
    style="@style/LayoutMatch"
    android:layout_marginBottom="@dimen/size15"
    android:layout_marginTop="@dimen/size15">


    <RelativeLayout
        android:id="@+id/header_left_btn_lay"
        android:layout_width="@dimen/size50"
        android:layout_height="@dimen/size50"
        android:clickable="true"
        android:gravity="center"
        android:visibility="visible">


        <ImageView
            android:id="@+id/header_left_img"
            android:layout_width="@dimen/size35"
            android:layout_height="@dimen/size35"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:clickable="false"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/size6"
            android:src="@drawable/black_back_img" />
    </RelativeLayout>

    <ScrollView
        style="@style/LayoutMatch"
        android:layout_above="@+id/ok_btn"
        android:layout_below="@+id/header_left_btn_lay"
        android:layout_margin="@dimen/size15"
        android:scrollbars="none">

        <TextView
            style="@style/TextRegular"
            android:text="@string/temp_txt" />

    </ScrollView>

    <Button
        android:id="@+id/ok_btn"
        style="@style/ButtonBold"
        android:layout_height="@dimen/size45"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/size15"
        android:layout_marginStart="@dimen/size15"
        android:layout_marginTop="@dimen/size5"
        android:text="@string/ok" />
</RelativeLayout>