<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size50"
    android:background="@color/gray">


    <RelativeLayout
        android:id="@+id/header_left_btn_lay"
        android:layout_width="@dimen/size50"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center"
        android:visibility="visible">


        <ImageView
            android:id="@+id/header_left_img"
            android:layout_width="@dimen/size35"
            android:layout_height="@dimen/size35"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:clickable="false"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/size6"
            android:src="@drawable/blue_back_img" />
    </RelativeLayout>


    <TextView
        android:id="@+id/header_txt"
        style="@style/TextBold"
        android:layout_centerInParent="true"
        android:layout_toEndOf="@+id/header_left_btn_lay"
        android:layout_toStartOf="@+id/header_right_btn_lay"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/sky_blue" />


    <RelativeLayout
        android:id="@+id/header_right_btn_lay"
        android:layout_width="@dimen/size50"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/header_right_img"
            android:layout_width="@dimen/size35"
            android:layout_height="@dimen/size35"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:clickable="false"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/size10"
            android:src="@drawable/blue_menu_img" />

    </RelativeLayout>

</RelativeLayout>
