<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LayoutMatch"
    android:background="@color/screen_bg"
    android:orientation="vertical"
    android:padding="@dimen/size15"
    android:weightSum="2">

    <LinearLayout
        style="@style/LayoutWidMatch_HeiWei"
        android:orientation="vertical">

        <LinearLayout
            style="@style/LayoutMatch"
            android:orientation="vertical"
            android:weightSum="8.5">

            <RelativeLayout
                style="@style/LayoutWidMatch_HeiWei"
                android:layout_marginBottom="@dimen/size0.5"
                android:layout_weight="2">

                <TextView
                    style="@style/TextRegular"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/anonymous_img"
                    android:gravity="start"
                    android:text="@string/allow_anonymous"
                    android:textSize="@dimen/text15" />

                <ImageView
                    android:id="@+id/anonymous_img"
                    android:layout_width="@dimen/size50"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/app_name"
                    android:paddingStart="@dimen/size5"
                    android:src="@drawable/distance_disable_img"
                    tools:ignore="RtlSymmetry" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size0.5"
                android:background="@color/black" />

            <RelativeLayout
                style="@style/LayoutWidMatch_HeiWei"
                android:layout_marginBottom="@dimen/size0.5"
                android:layout_weight="2">

                <TextView
                    style="@style/TextRegular"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/push_notify_img"
                    android:gravity="start"
                    android:text="@string/push_notify"
                    android:textSize="@dimen/text15" />

                <ImageView
                    android:id="@+id/push_notify_img"
                    android:layout_width="@dimen/size50"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/app_name"
                    android:paddingStart="@dimen/size5"
                    android:src="@drawable/distance_disable_img"
                    tools:ignore="RtlSymmetry" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size0.5"
                android:background="@color/black" />

            <RelativeLayout
                style="@style/LayoutWidMatch_HeiWei"
                android:layout_marginBottom="@dimen/size0.5"
                android:layout_weight="2">

                <TextView
                    style="@style/TextRegular"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/hide_loc_img"
                    android:gravity="start"
                    android:text="@string/hide_loc"
                    android:textSize="@dimen/text15" />

                <ImageView
                    android:id="@+id/hide_loc_img"
                    android:layout_width="@dimen/size50"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/app_name"
                    android:paddingStart="@dimen/size5"
                    android:src="@drawable/distance_disable_img"
                    tools:ignore="RtlSymmetry" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size0.5"
                android:background="@color/black" />

            <TextView
                android:id="@+id/version_num_txt"
                style="@style/TextRegular"
                android:layout_height="0dip"
                android:layout_weight="2.5"
                android:text="@string/version"
                android:textSize="@dimen/text15" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/LayoutWidMatch_HeiWei"
        android:orientation="vertical">

        <LinearLayout
            style="@style/LayoutMatch"
            android:orientation="vertical"
            android:weightSum="6">

            <TextView
                android:id="@+id/support_txt"
                style="@style/TextRegular"
                android:layout_height="0dip"
                android:layout_marginBottom="@dimen/size3"
                android:layout_weight="1"
                android:background="@color/white"
                android:text="@string/support"
                android:textColor="@color/sky_blue" />

            <TextView
                android:id="@+id/share_spark_txt"
                style="@style/TextRegular"
                android:layout_height="0dip"
                android:layout_marginBottom="@dimen/size3"
                android:layout_marginTop="@dimen/size3"
                android:layout_weight="1"
                android:background="@color/white"
                android:text="@string/share_spark"
                android:textColor="@color/sky_blue" />

            <TextView
                android:id="@+id/privacy_policy_txt"
                style="@style/TextRegular"
                android:layout_height="0dip"
                android:layout_marginBottom="@dimen/size5"
                android:layout_marginTop="@dimen/size5"
                android:layout_weight="1"
                android:background="@color/white"
                android:text="@string/privacy_policy"
                android:textColor="@color/sky_blue" />

            <TextView
                android:id="@+id/terms_service_txt"
                style="@style/TextRegular"
                android:layout_height="0dip"
                android:layout_marginBottom="@dimen/size3"
                android:layout_marginTop="@dimen/size3"
                android:layout_weight="1"
                android:background="@color/white"
                android:text="@string/terms_service"
                android:textColor="@color/sky_blue" />

            <TextView
                android:id="@+id/licenses_txt"
                style="@style/TextRegular"
                android:layout_height="0dip"
                android:layout_marginBottom="@dimen/size3"
                android:layout_marginTop="@dimen/size3"
                android:layout_weight="1"
                android:background="@color/white"
                android:text="@string/licenses"
                android:textColor="@color/sky_blue" />

            <TextView
                android:id="@+id/delete_acc_txt"
                style="@style/TextRegular"
                android:layout_height="0dip"
                android:layout_marginTop="@dimen/size3"
                android:layout_weight="1"
                android:background="@color/white"
                android:text="@string/delete_acc"
                android:textColor="@color/thick_gray" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>