<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_view_for_font"
    style="@style/LayoutMatch"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        style="@style/LayoutWidMatch_HeiWrap"
        android:layout_margin="@dimen/size30"
        android:background="@drawable/popup_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/size15">

        <TextView
            style="@style/TextBold"
            android:layout_marginBottom="@dimen/size3"
            android:layout_marginTop="@dimen/size3"
            android:text="@string/choose_photo"
            android:textAllCaps="true"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/from_camera_btn"
            style="@style/ButtonBold"
            android:layout_marginTop="@dimen/size10"
            android:background="@color/sky_blue"
            android:text="@string/from_camera"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/from_gallery_btn"
            style="@style/ButtonBold"
            android:layout_marginTop="@dimen/size15"
            android:background="@color/light_gray"
            android:text="@string/from_gallery"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/remove_btn"
            style="@style/ButtonBold"
            android:layout_marginTop="@dimen/size15"
            android:background="@color/red"
            android:text="@string/remove_photo"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/cancel_btn"
            style="@style/ButtonBold"
            android:layout_marginTop="@dimen/size15"
            android:background="@color/black"
            android:text="@android:string/cancel"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>