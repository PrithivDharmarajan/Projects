<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_view_for_font"
    style="@style/LayoutMatch"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        style="@style/LayoutWidMatch_HeiWrap"
        android:layout_margin="@dimen/size30"
        android:background="@drawable/popup_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/size15">

        <TextView
            style="@style/TextBold"
            android:layout_marginBottom="@dimen/size3"
            android:layout_marginTop="@dimen/size3"
            android:text="@string/invite_friends"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/share_via_mail_btn"
            style="@style/ButtonBold"
            android:layout_marginTop="@dimen/size10"
            android:background="@color/sky_blue"
            android:textAllCaps="false"
            android:text="@string/share_via_mail"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/share_via_msg_btn"
            style="@style/ButtonBold"
            android:layout_marginTop="@dimen/size15"
            android:textAllCaps="false"
            android:background="@color/light_gray"
            android:text="@string/share_via_msg"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/copy_link_btn"
            style="@style/ButtonBold"
            android:layout_marginTop="@dimen/size15"
            android:textAllCaps="false"
            android:background="@color/gray"
            android:text="@string/copy_link"
            android:textColor="@color/white" />
        <Button
            android:id="@+id/cancel_btn"
            style="@style/ButtonBold"
            android:textAllCaps="false"
            android:layout_marginTop="@dimen/size15"
            android:background="@color/black"
            android:text="@android:string/cancel"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>