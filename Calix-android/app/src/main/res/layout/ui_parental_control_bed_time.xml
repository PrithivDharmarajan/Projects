<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_gray"
    android:id="@+id/pc_bed_time_par_lay"
    style="@style/LayoutMatch">
    <ScrollView
        style="@style/LayoutMatch"
        android:scrollbars="none">

        <LinearLayout
            style="@style/LayoutWidMatch_HeiWrap"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/control_bed_time_header_bg_lay"
                style="@style/LayoutWidMatch_HeiWrap"
                android:layout_height="@dimen/size190"
                android:background="@drawable/header_violet_bg">

                <RelativeLayout
                    android:id="@+id/control_bed_time_header_lay"
                    style="@style/LayoutWidMatch_HeiWrap"
                    android:visibility="visible">

                    <include layout="@layout/ui_general_header" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/control_bed_time_header_msg_lay"
                    style="@style/LayoutWidMatch_HeiWrap"
                    android:layout_below="@+id/control_bed_time_header_lay"
                    android:layout_marginBottom="@dimen/size10">

                    <RelativeLayout
                        android:id="@+id/profile_img_lay"
                        android:layout_width="@dimen/size90"
                        android:layout_height="@dimen/size90"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="@dimen/size10">

                        <ImageView
                            android:id="@+id/control_bed_time_header_img"
                            style="@style/LayoutMatch"
                            android:layout_margin="@dimen/size14"
                            android:contentDescription="@string/app_name"
                            android:adjustViewBounds="true"
                            android:src="@drawable/pc_bed_time_header" />

                    </RelativeLayout>

                </RelativeLayout>
            </RelativeLayout>

            <android.support.v7.widget.CardView
                style="@style/LayoutWidMatch_HeiWrap"
                android:layout_marginLeft="@dimen/size3"
                android:layout_marginRight="@dimen/size3"
                android:layout_marginBottom="@dimen/size5"
                android:layout_marginTop="@dimen/size5"
                app:cardCornerRadius="@dimen/size3">
                <LinearLayout
                    android:padding="@dimen/size5"
                    style="@style/LayoutWidMatch_HeiWrap"
                    android:orientation="vertical">

                    <RelativeLayout
                        style="@style/LayoutWidMatch_HeiWrap">

                        <LinearLayout
                            android:id="@+id/bed_time_enable_lay"
                            style="@style/LayoutWrap"
                            android:orientation="vertical"
                            android:padding="@dimen/size5"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/size5">
                            <TextView
                                style="@style/TextOpenSansSemiBold"
                                android:layout_width="wrap_content"
                                android:gravity="start"
                                android:text="@string/parental_control"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text13"
                                android:layout_marginTop="@dimen/size3"/>

                            <TextView
                                style="@style/TextOpenSansRegular"
                                android:layout_width="wrap_content"
                                android:gravity="start"
                                android:text="@string/pause_the_filter"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/text11"
                                android:layout_marginTop="@dimen/size3"/>


                        </LinearLayout>
                        <android.support.v7.widget.SwitchCompat
                            android:id="@+id/bed_time_enable_edit_img"
                            style="@style/LayoutWrap"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:background="@android:color/transparent"
                            android:checked="true"
                            android:button="@null"
                            android:padding="@dimen/size5"
                            app:switchMinWidth="@dimen/size5" />

                        <View
                            android:layout_below="@+id/bed_time_enable_lay"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size1"
                            android:background="@color/light_gray"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        style="@style/LayoutWidMatch_HeiWrap">

                        <LinearLayout
                            android:id="@+id/bed_time_filter_enable_lay"
                            style="@style/LayoutWrap"
                            android:orientation="vertical"
                            android:padding="@dimen/size5"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/size5">
                            <TextView
                                style="@style/TextOpenSansSemiBold"
                                android:layout_width="wrap_content"
                                android:gravity="start"
                                android:text="@string/bed_time"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text13"
                                android:layout_marginTop="@dimen/size3"/>

                            <TextView
                                style="@style/TextOpenSansRegular"
                                android:layout_width="wrap_content"
                                android:gravity="start"
                                android:text="@string/internet_stop"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/text11"
                                android:layout_marginTop="@dimen/size3"/>


                        </LinearLayout>

                        <TextView
                            style="@style/TextOpenSansSemiBold"
                            android:layout_width="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@+id/bed_time_filter_enable_lay"
                            android:layout_toStartOf="@+id/bed_time_enable_time_edit_img"
                            android:gravity="end"
                            android:text="@string/nine"
                            android:textColor="@color/violet"
                            android:textSize="@dimen/text14"
                            android:layout_marginEnd="@dimen/size6"/>
                        <ImageView
                            android:id="@+id/bed_time_enable_time_edit_img"
                            android:layout_width="@dimen/size25"
                            android:layout_height="@dimen/size25"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/edit_img"
                            android:layout_marginEnd="@dimen/size5"
                            android:layout_centerVertical="true"
                            android:adjustViewBounds="true"
                            android:layout_alignParentEnd="true"/>
                        <View
                            android:layout_below="@+id/bed_time_filter_enable_lay"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size1"
                            android:background="@color/light_gray"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        style="@style/LayoutWidMatch_HeiWrap">

                        <LinearLayout
                            android:id="@+id/bed_time_filter_disable_lay"
                            style="@style/LayoutWrap"
                            android:orientation="vertical"
                            android:padding="@dimen/size5"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/size5">
                            <TextView
                                style="@style/TextOpenSansSemiBold"
                                android:layout_width="wrap_content"
                                android:gravity="start"
                                android:text="@string/awake_time"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text13"
                                android:layout_marginTop="@dimen/size3"/>

                            <TextView
                                style="@style/TextOpenSansRegular"
                                android:layout_width="wrap_content"
                                android:gravity="start"
                                android:text="@string/internet_restart"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/text11"
                                android:layout_marginTop="@dimen/size3"/>


                        </LinearLayout>

                        <TextView
                            style="@style/TextOpenSansSemiBold"
                            android:layout_width="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@+id/bed_time_filter_disable_lay"
                            android:layout_toStartOf="@+id/awake_time_enable_time_edit_img"
                            android:gravity="end"
                            android:text="@string/seven_thiry"
                            android:textColor="@color/violet"
                            android:textSize="@dimen/text14"
                            android:layout_marginEnd="@dimen/size6"/>
                        <ImageView
                            android:id="@+id/awake_time_enable_time_edit_img"
                            android:layout_width="@dimen/size25"
                            android:layout_height="@dimen/size25"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/edit_img"
                            android:layout_marginEnd="@dimen/size5"
                            android:layout_centerVertical="true"
                            android:adjustViewBounds="true"
                            android:layout_alignParentEnd="true"/>
                        <View
                            android:layout_below="@+id/bed_time_filter_disable_lay"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size1"
                            android:background="@color/light_gray"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        style="@style/LayoutWidMatch_HeiWrap">
                        <LinearLayout
                            android:layout_alignParentStart="true"
                            android:id="@+id/bed_time_filter_weeekend_lay"
                            style="@style/LayoutWrap"
                            android:orientation="vertical"
                            android:padding="@dimen/size5"
                            android:layout_marginStart="@dimen/size5"
                            android:layout_toStartOf="@+id/bed_time_filter_weeekend_enable_img">
                            <TextView
                                style="@style/TextOpenSansSemiBold"
                                android:layout_width="wrap_content"
                                android:gravity="start"
                                android:text="@string/bed_time_weekend"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text13"
                                android:layout_marginTop="@dimen/size3"/>

                            <TextView
                                style="@style/TextOpenSansRegular"
                                android:layout_width="wrap_content"
                                android:gravity="start"
                                android:text="@string/enable_bed_time_weekend"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/text11"
                                android:layout_marginTop="@dimen/size3"/>
                        </LinearLayout>
                        <android.support.v7.widget.SwitchCompat
                            android:id="@+id/bed_time_filter_weeekend_enable_img"
                            style="@style/LayoutWrap"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:background="@android:color/transparent"
                            android:button="@null"
                            android:padding="@dimen/size5"
                            app:switchMinWidth="@dimen/size5" />
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size1"
                        android:background="@color/light_gray"
                        />
                    <LinearLayout
                        android:layout_marginTop="@dimen/size10"
                        android:layout_marginBottom="@dimen/size10"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal"
                        style="@style/LayoutWrap">
                        <RelativeLayout
                            android:id="@+id/pc_bed_time_mon_lay"
                            android:layout_marginRight="@dimen/size3"
                            android:layout_marginLeft="@dimen/size3"
                            android:layout_width="@dimen/size25"
                            android:layout_height="@dimen/size25"
                            android:background="@drawable/round_violet_bg">
                            <TextView
                                android:id="@+id/pc_bed_time_mon_txt"
                                style="@style/TextOpenSansSemiBold"
                                android:layout_width="wrap_content"
                                android:gravity="start"
                                android:text="@string/m"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text13"
                                android:layout_centerInParent="true"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/pc_bed_time_tue_lay"
                            android:layout_marginRight="@dimen/size3"
                            android:layout_marginLeft="@dimen/size3"
                            android:layout_width="@dimen/size25"
                            android:layout_height="@dimen/size25"
                            android:background="@drawable/round_violet_bg">
                            <TextView
                                android:id="@+id/pc_bed_time_tue_txt"
                                style="@style/TextOpenSansSemiBold"
                                android:layout_width="wrap_content"
                                android:gravity="start"
                                android:text="@string/t"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text13"
                                android:layout_centerInParent="true"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/pc_bed_time_wed_lay"
                            android:layout_marginRight="@dimen/size3"
                            android:layout_marginLeft="@dimen/size3"
                            android:layout_width="@dimen/size25"
                            android:layout_height="@dimen/size25"
                            android:background="@drawable/round_violet_bg">
                            <TextView
                                android:id="@+id/pc_bed_time_wed_txt"
                                style="@style/TextOpenSansSemiBold"
                                android:layout_width="wrap_content"
                                android:gravity="start"
                                android:text="@string/w"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text13"
                                android:layout_centerInParent="true"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/pc_bed_time_thu_lay"
                            android:layout_marginRight="@dimen/size3"
                            android:layout_marginLeft="@dimen/size3"
                            android:layout_width="@dimen/size25"
                            android:layout_height="@dimen/size25"
                            android:background="@drawable/round_violet_bg">
                            <TextView
                                android:id="@+id/pc_bed_time_thu_txt"
                                style="@style/TextOpenSansSemiBold"
                                android:layout_width="wrap_content"
                                android:gravity="start"
                                android:text="@string/t"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text13"
                                android:layout_centerInParent="true"/>
                        </RelativeLayout>

                        <RelativeLayout
                           android:id="@+id/pc_bed_time_fri_lay"
                            android:layout_marginRight="@dimen/size3"
                            android:layout_marginLeft="@dimen/size3"
                            android:layout_width="@dimen/size25"
                            android:layout_height="@dimen/size25"
                            android:background="@drawable/round_white_violet_bg">
                            <TextView
                                android:id="@+id/pc_bed_time_fri_txt"
                                style="@style/TextOpenSansSemiBold"
                                android:layout_width="wrap_content"
                                android:gravity="start"
                                android:text="@string/F"
                                android:textColor="@color/violet"
                                android:textSize="@dimen/text13"
                                android:layout_centerInParent="true"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/pc_bed_time_sat_lay"
                            android:layout_marginRight="@dimen/size3"
                            android:layout_marginLeft="@dimen/size3"
                            android:layout_width="@dimen/size25"
                            android:layout_height="@dimen/size25"
                            android:background="@drawable/round_white_violet_bg">
                            <TextView
                                android:id="@+id/pc_bed_time_sat_txt"
                                style="@style/TextOpenSansSemiBold"
                                android:layout_width="wrap_content"
                                android:gravity="start"
                                android:text="@string/s"
                                android:textColor="@color/violet"
                                android:textSize="@dimen/text13"
                                android:layout_centerInParent="true"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/pc_bed_time_sun_lay"
                            android:layout_marginRight="@dimen/size3"
                            android:layout_marginLeft="@dimen/size3"
                            android:layout_width="@dimen/size25"
                            android:layout_height="@dimen/size25"
                            android:background="@drawable/round_white_violet_bg">
                            <TextView
                                android:id="@+id/pc_bed_time_sun_txt"
                                style="@style/TextOpenSansSemiBold"
                                android:layout_width="wrap_content"
                                android:gravity="start"
                                android:text="@string/s"
                                android:textColor="@color/violet"
                                android:textSize="@dimen/text13"
                                android:layout_centerInParent="true"/>
                        </RelativeLayout>

                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
