<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LayoutMatch"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        style="@style/LayoutMatch"
        android:layout_above="@+id/upload_download_view">

        <LinearLayout
            style="@style/LayoutWidMatch_HeiWrap"
            android:orientation="vertical">

            <TextView
                style="@style/TextOpenSansRegular"
                android:layout_width="wrap_content"
                android:layout_marginStart="@dimen/size23"
                android:text="@string/upload"
                android:textColor="@color/white"
                android:textSize="@dimen/text7" />

            <LinearLayout
                style="@style/LayoutWidMatch_HeiWrap"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="@dimen/size20"
                    android:layout_height="@dimen/size20"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/app_name"
                    android:padding="@dimen/size3"
                    android:rotation="180"
                    android:src="@drawable/arrow_down_white" />


                <TextView
                    android:id="@+id/upload_speed_txt"
                    style="@style/TextOpenSansRegular"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="@dimen/size3"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text13" />
            </LinearLayout>


            <TextView
                android:id="@+id/upload_scale_txt"
                style="@style/TextOpenSansRegular"
                android:layout_width="wrap_content"
                android:layout_marginStart="@dimen/size23"
                android:text="@string/mbps"
                android:textColor="@color/orange"
                android:textSize="@dimen/text6" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


    <android.support.v4.widget.NestedScrollView
        style="@style/LayoutMatch"
        android:layout_below="@+id/upload_download_view">

        <LinearLayout
            style="@style/LayoutWidMatch_HeiWrap"
            android:layout_marginTop="@dimen/size5"
            android:orientation="vertical">

            <TextView
                style="@style/TextOpenSansRegular"
                android:layout_width="wrap_content"
                android:layout_marginStart="@dimen/size23"
                android:text="@string/download"
                android:textColor="@color/white"
                android:textSize="@dimen/text7" />

            <LinearLayout
                style="@style/LayoutWidMatch_HeiWrap"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="@dimen/size20"
                    android:layout_height="@dimen/size20"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/app_name"
                    android:padding="@dimen/size3"
                    android:src="@drawable/arrow_down_white" />


                <TextView
                    android:id="@+id/download_speed_txt"
                    style="@style/TextOpenSansRegular"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="@dimen/size3"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text13" />
            </LinearLayout>


            <TextView
                android:id="@+id/download_scale_txt"
                style="@style/TextOpenSansRegular"
                android:layout_width="wrap_content"
                android:layout_marginStart="@dimen/size23"
                android:text="@string/mbps"
                android:textColor="@color/orange"
                android:textSize="@dimen/text6" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


    <View
        android:id="@+id/upload_download_view"
        style="@style/LayoutWidMatch_HeiWrap"
        android:layout_height="@dimen/size0.25"
        android:layout_centerInParent="true"
        android:background="@color/white" />

</RelativeLayout>


