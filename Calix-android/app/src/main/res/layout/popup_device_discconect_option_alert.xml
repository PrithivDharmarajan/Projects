<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LayoutWidMatch_HeiWrap"
    android:layout_margin="@dimen/size15">

    <LinearLayout
        style="@style/LayoutWidMatch_HeiWrap"
        android:layout_margin="@dimen/size1"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            style="@style/TextOpenSansSemiBold"
            android:background="@color/violet"
            android:paddingBottom="@dimen/size10"
            android:paddingTop="@dimen/size10"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/text16" />

        <Button
            android:id="@+id/alert_immediate_btn"
            style="@style/ButtonOpenSansSemiBold"
            android:layout_margin="@dimen/size25"
            android:text="@string/immediate"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/alert_schedule_btn"
            style="@style/ButtonOpenSansSemiBold"
            android:layout_marginEnd="@dimen/size25"
            android:layout_marginStart="@dimen/size25"
            android:text="@string/schedule"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/alert_cancel_btn"
            style="@style/ButtonOpenSansSemiBold"
            android:background="@drawable/red_btn"
            android:layout_margin="@dimen/size25"
            android:text="@string/cancel"
            android:textAllCaps="false" />

    </LinearLayout>
</RelativeLayout>


