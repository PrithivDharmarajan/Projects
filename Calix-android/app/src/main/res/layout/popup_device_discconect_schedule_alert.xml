<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LayoutWidMatch_HeiWrap"
    android:layout_margin="@dimen/size15">

    <ScrollView style="@style/LayoutWidMatch_HeiWrap">

        <LinearLayout
            style="@style/LayoutWidMatch_HeiWrap"
            android:layout_margin="@dimen/size1"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                style="@style/TextOpenSansSemiBold"
                android:background="@color/violet"
                android:paddingBottom="@dimen/size10"
                android:paddingTop="@dimen/size10"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="@dimen/text16" />

            <android.support.v7.widget.CardView
                android:id="@+id/setup_guest_indefinite_network_lay"
                style="@style/LayoutWidMatch_HeiWrap"
                android:layout_margin="@dimen/size13"
                app:cardCornerRadius="@dimen/size3">

                <LinearLayout
                    style="@style/LayoutWidMatch_HeiWrap"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/setup_time_duration_txt"
                        style="@style/TextOpenSansSemiBold"
                        android:padding="@dimen/size10"
                        android:text="@string/time_duration_cap"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size13" />

                    <LinearLayout
                        style="@style/LayoutWidMatch_HeiWrap"
                        android:layout_marginEnd="@dimen/size30"
                        android:layout_marginStart="@dimen/size30"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/size10">

                        <LinearLayout
                            style="@style/LayoutWidMatch_HeiWrap"
                            tools:ignore="UseCompoundDrawables">

                            <ImageView
                                android:layout_width="@dimen/size50"
                                android:layout_height="@dimen/size50"
                                android:adjustViewBounds="true"
                                android:contentDescription="@string/app_name"
                                android:paddingBottom="@dimen/size10"
                                android:paddingEnd="@dimen/size10"
                                android:paddingStart="0dp"
                                android:paddingTop="@dimen/size10"
                                android:src="@drawable/calender_icon" />

                            <TextView
                                style="@style/TextOpenSansSemiBold"
                                android:layout_gravity="center_vertical"
                                android:gravity="start"
                                android:text="@string/date"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text12" />
                        </LinearLayout>

                        <RelativeLayout style="@style/LayoutWidMatch_HeiWrap">

                            <LinearLayout
                                android:id="@+id/start_date_lay"
                                style="@style/LayoutWrap"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/start_date_txt"
                                    style="@style/TextOpenSansSemiBold"
                                    android:layout_width="@dimen/size80"
                                    android:background="@drawable/violet_bg"
                                    android:padding="@dimen/size7"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/text11" />

                                <TextView
                                    style="@style/TextOpenSansRegular"
                                    android:gravity="start"
                                    android:padding="@dimen/size3"
                                    android:text="@string/start"
                                    android:textColor="@color/gray"
                                    android:textSize="@dimen/text10" />
                            </LinearLayout>

                            <TextView
                                style="@style/TextOpenSansRegular"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@+id/start_date_lay"
                                android:layout_toStartOf="@+id/end_date_lay"
                                android:text="@string/to"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/size13" />

                            <LinearLayout
                                android:id="@+id/end_date_lay"
                                style="@style/LayoutWrap"
                                android:layout_alignParentEnd="true"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/end_date_txt"
                                    style="@style/TextOpenSansSemiBold"
                                    android:layout_width="@dimen/size80"
                                    android:background="@drawable/violet_bg"
                                    android:padding="@dimen/size7"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/text11" />

                                <TextView
                                    style="@style/TextOpenSansRegular"
                                    android:gravity="start"
                                    android:padding="@dimen/size3"
                                    android:text="@string/end"
                                    android:textColor="@color/gray"
                                    android:textSize="@dimen/text10" />
                            </LinearLayout>
                        </RelativeLayout>

                        <LinearLayout
                            style="@style/LayoutWidMatch_HeiWrap"
                            tools:ignore="UseCompoundDrawables">

                            <ImageView
                                android:layout_width="@dimen/size50"
                                android:layout_height="@dimen/size50"
                                android:adjustViewBounds="true"
                                android:contentDescription="@string/app_name"
                                android:paddingBottom="@dimen/size8"
                                android:paddingEnd="@dimen/size8"
                                android:paddingStart="0dp"
                                android:paddingTop="@dimen/size8"
                                android:src="@drawable/guest_network_time" />

                            <TextView
                                style="@style/TextOpenSansSemiBold"
                                android:layout_gravity="center_vertical"
                                android:gravity="start"
                                android:text="@string/time"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text12" />
                        </LinearLayout>

                        <RelativeLayout style="@style/LayoutWidMatch_HeiWrap">

                            <LinearLayout
                                android:id="@+id/start_time_lay"
                                style="@style/LayoutWrap"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/start_time_txt"
                                    style="@style/TextOpenSansSemiBold"
                                    android:layout_width="@dimen/size80"
                                    android:background="@drawable/violet_bg"
                                    android:padding="@dimen/size7"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/text11" />

                                <TextView
                                    style="@style/TextOpenSansRegular"
                                    android:gravity="start"
                                    android:paddingTop="@dimen/size3"
                                    android:text="@string/start"
                                    android:textColor="@color/gray"
                                    android:textSize="@dimen/text10" />
                            </LinearLayout>

                            <TextView
                                style="@style/TextOpenSansRegular"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@+id/start_time_lay"
                                android:layout_toStartOf="@+id/end_time_lay"
                                android:text="@string/to"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/size13" />

                            <LinearLayout
                                android:id="@+id/end_time_lay"
                                style="@style/LayoutWrap"
                                android:layout_alignParentEnd="true"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/end_time_txt"
                                    style="@style/TextOpenSansSemiBold"
                                    android:layout_width="@dimen/size80"
                                    android:background="@drawable/violet_bg"
                                    android:padding="@dimen/size7"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/text11" />

                                <TextView
                                    style="@style/TextOpenSansRegular"
                                    android:gravity="start"
                                    android:padding="@dimen/size3"
                                    android:text="@string/end"
                                    android:textColor="@color/gray"
                                    android:textSize="@dimen/text10" />
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/alert_done_btn"
                style="@style/ButtonOpenSansSemiBold"
                android:layout_marginBottom="@dimen/size13"
                android:layout_marginEnd="@dimen/size25"
                android:layout_marginStart="@dimen/size25"
                android:text="@string/done"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/alert_cancel_btn"
                style="@style/ButtonOpenSansSemiBold"
                android:background="@drawable/red_btn"
                android:layout_marginBottom="@dimen/size13"
                android:layout_marginEnd="@dimen/size25"
                android:layout_marginStart="@dimen/size25"
                android:text="@string/cancel"
                android:textAllCaps="false" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>


