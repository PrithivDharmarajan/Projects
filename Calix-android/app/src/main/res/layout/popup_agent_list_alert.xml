<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LayoutWidMatch_HeiWrap"
    android:layout_margin="@dimen/size15">

    <LinearLayout
        android:id="@+id/agent_parent_lay"
        style="@style/LayoutWidMatch_HeiWrap"
        android:layout_margin="@dimen/size1"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            style="@style/TextOpenSansSemiBold"
            android:background="@color/violet"
            android:padding="@dimen/size10"

            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/text16" />

        <TextView
            style="@style/TextOpenSansRegular"
            android:background="@color/violet"
            android:padding="@dimen/size5"
            android:text="@string/agent_list"
            android:textColor="@color/white"
            android:textSize="@dimen/text15" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/agent_recycler_view"
            style="@style/LayoutWidMatch_HeiWrap"
            android:layout_marginBottom="@dimen/size3"
            android:layout_marginTop="@dimen/size3" />
    </LinearLayout>
</RelativeLayout>


