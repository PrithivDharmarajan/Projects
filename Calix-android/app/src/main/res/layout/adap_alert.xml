<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LayoutWidMatch_HeiWrap"
    android:layout_margin="@dimen/size5"
    android:elevation="@dimen/size2"
    app:cardCornerRadius="@dimen/size3"
    tools:ignore="UnusedAttribute">

    <RelativeLayout
        style="@style/LayoutWidMatch_HeiWrap"
        android:layout_marginBottom="@dimen/size2"
        android:layout_marginTop="@dimen/size2"
        android:padding="@dimen/size10">

        <ImageView
            android:id="@+id/issue_status_img"
            android:layout_width="@dimen/size27"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/size3"
            android:src="@drawable/issue" />
        <LinearLayout
            style="@style/LayoutWidMatch_HeiWrap"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_marginStart="@dimen/size10"
            android:layout_toEndOf="@+id/issue_status_img"
            android:layout_toStartOf="@+id/fix_it_done_btn"
            android:orientation="vertical">

            <TextView
                android:id="@+id/issue_txt"
                style="@style/TextOpenSansRegular"
                android:ellipsize="end"
                android:gravity="start"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textSize="@dimen/text11" />
            <TextView
                android:id="@+id/date_txt"
                style="@style/TextOpenSansRegular"
                android:ellipsize="end"
                android:gravity="start"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textSize="@dimen/text8" />
        </LinearLayout>

        <Button
            android:id="@+id/fix_it_done_btn"
            style="@style/ButtonOpenSansSemiBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/violet_border_btn"
            android:paddingBottom="@dimen/size4"
            android:paddingEnd="@dimen/size15"
            android:paddingStart="@dimen/size15"
            android:paddingTop="@dimen/size4"
            android:text="@string/read"
            android:textAllCaps="true"
            android:textColor="@color/violet"
            android:textSize="@dimen/text12" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
