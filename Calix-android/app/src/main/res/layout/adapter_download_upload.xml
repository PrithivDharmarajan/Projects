<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LayoutWidMatch_HeiWrap"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        style="@style/LayoutWidMatch_HeiWrap"
        android:layout_marginBottom="@dimen/size1"
        android:layout_marginLeft="@dimen/size5"
        android:layout_marginRight="@dimen/size5"
        android:layout_marginTop="@dimen/size5">


        <LinearLayout
            style="@style/LayoutWidMatch_HeiWrap"
            android:orientation="vertical"
            android:padding="@dimen/size6">


            <LinearLayout
                style="@style/LayoutWidMatch_HeiWrap"
                android:layout_weight="30"
                tools:ignore="DisableBaselineAlignment,
                InefficientWeight">


                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="13"
                    tools:ignore="NestedWeights">


                    <ImageView
                        android:id="@+id/adapter_control_device_img"
                        android:layout_width="@dimen/size30"
                        android:layout_height="@dimen/size30"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/phones" />

                    <TextView
                        android:id="@+id/device_name_txt"
                        style="@style/TextOpenSansRegular"
                        android:layout_gravity="center"
                        android:gravity="start"
                        android:text="Lonas Iphone"
                        android:textSize="@dimen/size12" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextOpenSansRegular"
                        android:text="Connected Via"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/size10" />

                    <LinearLayout style="@style/LayoutWrap">

                        <ImageView
                            android:id="@+id/connect_via_img"
                            android:layout_width="@dimen/size10"
                            android:layout_height="@dimen/size10"
                            android:layout_gravity="center"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/parental_user_off_time" />

                        <TextView
                            style="@style/TextOpenSansRegular"
                            android:layout_marginStart="@dimen/size3"
                            android:text="WiFi"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/size10" />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:gravity="end"
                    tools:ignore="UseCompoundDrawables">

                    <TextView
                        android:id="@+id/number_txt"
                        style="@style/TextOpenSansRegular"
                        android:layout_width="wrap_content"
                        android:layout_marginEnd="@dimen/size6"
                        android:text="1"
                        android:textColor="@color/violet"
                        android:textSize="@dimen/size18" />

                    <ImageView
                        android:layout_width="@dimen/size25"
                        android:layout_height="@dimen/size25"
                        android:layout_gravity="center"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/wifi_pointer" />
                </LinearLayout>


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size1"
                android:layout_marginEnd="@dimen/size6"
                android:layout_marginStart="@dimen/size6"
                android:layout_marginTop="@dimen/size5"
                android:background="@color/light_gray" />

            <LinearLayout
                style="@style/LayoutWidMatch_HeiWrap"
                android:orientation="vertical"
                android:paddingEnd="@dimen/size6"
                android:paddingStart="@dimen/size6"
                android:paddingTop="@dimen/size6">

                <RelativeLayout style="@style/LayoutWidMatch_HeiWrap">

                    <ImageView
                        android:id="@+id/network_usage_img"
                        android:layout_width="@dimen/size30"
                        android:layout_height="@dimen/size30"
                        android:contentDescription="@string/app_name"
                        android:padding="@dimen/size5"
                        android:src="@drawable/network_usage" />

                    <TextView
                        style="@style/TextOpenSansRegular"
                        android:layout_width="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/network_usage_img"
                        android:text="NetWork Usage"
                        android:textSize="@dimen/size12" />

                    <TextView
                        android:id="@+id/network_usage_txt"
                        style="@style/TextOpenSansRegular"
                        android:layout_width="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/size10"
                        android:text="60%"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/size14"
                        tools:ignore="RelativeOverlap" />


                </RelativeLayout>


                <RelativeLayout style="@style/LayoutWidMatch_HeiWrap">

                    <ImageView
                        android:id="@+id/download_img"
                        android:layout_width="@dimen/size30"
                        android:layout_height="@dimen/size30"
                        android:contentDescription="@string/app_name"
                        android:padding="@dimen/size5"
                        android:src="@drawable/download" />

                    <TextView
                        style="@style/TextOpenSansRegular"
                        android:layout_width="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/download_img"
                        android:text="Download"
                        android:textSize="@dimen/size12" />

                    <TextView
                        android:id="@+id/download_bytes_txt"
                        style="@style/TextOpenSansRegular"
                        android:layout_width="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/size10"
                        android:text="100 Mbytes"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/size14"
                        tools:ignore="RelativeOverlap" />


                </RelativeLayout>
            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>