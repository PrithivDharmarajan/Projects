<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pc_filter_par_lay"
 style="@style/LayoutMatch">

    <RelativeLayout
        android:id="@+id/pc_filter_header_bg_lay"
        style="@style/LayoutWidMatch_HeiWrap"
        android:background="@color/violet">

        <include layout="@layout/ui_general_header" />
    </RelativeLayout>


    <android.support.design.widget.TabLayout
        android:id="@+id/pc_filter_tab_lay"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_below="@+id/pc_filter_header_bg_lay"
        android:background="@color/white"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/orange"
        app:tabMaxWidth="0dp"
        app:tabMinWidth="@dimen/size80"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/black"
        app:tabTextAppearance="@style/MineCustomTabText"
        app:tabTextColor="@color/black"
        tools:targetApi="lollipop" />


    <android.support.v4.view.ViewPager
        android:id="@+id/pc_filter_pager"
        style="@style/LayoutMatch"
        android:layout_below="@+id/pc_filter_tab_lay" />



</RelativeLayout>
